                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${statusClass}">
                        ${bid.status.charAt(0).toUpperCase() + bid.status.slice(1)}
                    </span>
                </div>

                <!-- Bid Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <p class="text-sm text-gray-600 dark:text-gray-400">Bid Amount</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white mt-1">
                            ‚Çπ${bid.amount.toLocaleString()}
                        </p>
                    </div>
                    
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <p class="text-sm text-gray-600 dark:text-gray-400">Bid Date</p>
                        <p class="text-lg font-semibold text-gray-900 dark:text-white mt-1">
                            ${new Date(bid.date).toLocaleDateString('en-IN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        })}
                        </p>
                    </div>

                    ${bid.bidderName ? `
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <p class="text-sm text-gray-600 dark:text-gray-400">Bidder Name</p>
                        <p class="text-lg font-semibold text-gray-900 dark:text-white mt-1">${bid.bidderName}</p>
                    </div>
                    
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <p class="text-sm text-gray-600 dark:text-gray-400">Bidder Email</p>
                        <p class="text-lg font-semibold text-gray-900 dark:text-white mt-1">${bid.bidderEmail}</p>
                    </div>

                    ${bid.ownerName ? `
                    <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                        <p class="text-sm text-gray-600 dark:text-gray-400">Owner / Publisher</p>
                        <p class="text-lg font-semibold text-gray-900 dark:text-white mt-1">${bid.ownerName}</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">${bid.ownerEmail}</p>
                    </div>
                    ` : ''}
                    ` : ''}
                </div>

                <!-- Additional Info -->
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Additional Information</h4>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">Bid Type:</span>
                            <span class="font-medium text-gray-900 dark:text-white">
                                ${bid.type === 'property' ? 'Property Auction' : 'Tender'}
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">Bid ID:</span>
                            <span class="font-mono text-xs text-gray-900 dark:text-white">${bid._id}</span>
                        </div>
                        ${bid.isWinning ? `
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">Status:</span>
                            <span class="font-medium text-green-600 dark:text-green-400">
                                üèÜ Winning Bid
