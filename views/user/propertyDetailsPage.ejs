<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

  <!-- PROPERTY IMAGE SLIDER -->
  <div class="relative w-full mb-6">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" 
      rel="stylesheet" />
    <button onclick="window.location.href='/properties'"
      class="p-2 rounded-full bg-gray-100 hover:bg-gray-200 transition">
      <span class="material-symbols-outlined text-3xl">arrow_back</span>
    </button>
    <div id="slider" class="overflow-hidden rounded-lg">
      <% if (property.media && property.media.length > 0) { %>
        <div id="slides" class="flex transition-transform duration-500">
          <% property.media.forEach(img => { %>
            <img 
              src="<%= img %>" 
              class="w-full h-72 sm:h-96 object-cover flex-shrink-0"
              alt="Property image"
            />
          <% }) %>
        </div>
      <% } else { %>
        <img 
          src="/images/default-property.jpg"
          class="w-full h-72 sm:h-96 object-cover rounded-lg"
        />
      <% } %>
    </div>

    <!-- SLIDER CONTROLS -->
    <% if (property.media && property.media.length > 1) { %>
      <button id="prevBtn"
        class="absolute top-1/2 -translate-y-1/2 left-3 bg-black/50 text-white p-2 rounded-full">
        <span class="material-icons">chevron_left</span>
      </button>
      <button id="nextBtn"
        class="absolute top-1/2 -translate-y-1/2 right-3 bg-black/50 text-white p-2 rounded-full">
        <span class="material-icons">chevron_right</span>
      </button>
    <% } %>
  </div>

  <!-- TITLE & LOCATION -->
  <h1 class="text-3xl sm:text-4xl font-bold"><%= property.title %></h1>

  <% if (property.address) { %>
    <p class="text-gray-500 mt-2"><%= property.address %></p>
  <% } %>

  <!-- MAIN GRID -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mt-10">

    <!-- LEFT COLUMN -->
    <div class="md:col-span-2 space-y-10">

      <!-- DESCRIPTION -->
      <% if (property.description) { %>
        <div>
          <h2 class="text-2xl font-bold mb-3">Description</h2>
          <p class="text-gray-600 leading-relaxed"><%= property.description %></p>
        </div>
      <% } %>

      <!-- PRICING -->
      <div>
        <h2 class="text-2xl font-bold mb-3">Pricing</h2>
        <div class="space-y-3">
          <% if (property.basePrice) { %>
            <div class="flex justify-between">
              <span class="text-gray-500">Base Price</span>
              <span class="font-semibold">&#8377; <%= property.basePrice.toLocaleString() %></span>
            </div>
          <% } %>

          <% if (property.buyNowPrice) { %>
            <div class="flex justify-between">
              <span class="text-gray-500">Buy Now Price</span>
              <span class="font-semibold text-green-600">&#8377; <%= property.buyNowPrice.toLocaleString() %></span>
            </div>
          <% } %>
        </div>
      </div>

      <!-- AUCTION DETAILS -->
      <div>
  <h2 class="text-2xl font-bold mb-3">Auction Details</h2>
  <div class="space-y-3">

    <div class="flex justify-between">
      <span class="text-gray-500">Start Date</span>
      <span class="font-semibold">
        <%= property.auctionStartsAt 
              ? property.auctionStartsAt.toDateString() 
              : "Not set" %>
      </span>
    </div>

    <div class="flex justify-between">
      <span class="text-gray-500">End Date</span>
      <span class="font-semibold">
        <%= property.auctionEndsAt 
              ? property.auctionEndsAt.toDateString() 
              : "Not set" %>
      </span>
    </div>

  </div>
</div>
      <!-- OPTIONAL: DOCUMENTS -->
      <% if (property.documents && property.documents.length > 0) { %>
        <div>
          <h2 class="text-2xl font-bold mb-3">Documents</h2>
          <div class="space-y-3">
            <% property.documents.forEach(doc => { %>
              <div class="flex justify-between items-center bg-gray-100 p-4 rounded-lg">
                <span><%= doc.name %></span>
                <a href="<%= doc.url %>" target="_blank"
                   class="px-4 py-2 bg-white border rounded-lg hover:bg-gray-50">
                  Download
                </a>
              </div>
            <% }) %>
          </div>
        </div>
      <% } %>

      <!-- OPTIONAL MAP -->
      <% if (property.mapEmbed) { %>
      <div>
        <h2 class="text-2xl font-bold mb-3">Location</h2>
        <iframe
          src="<%= property.mapEmbed %>"
          class="w-full h-64 rounded-lg"
          allowfullscreen=""
          loading="lazy">
        </iframe>
      </div>
      <% } %>

    </div>

    <!-- RIGHT SIDEBAR -->
    <div class="space-y-4 sticky top-20 h-fit">

      <button class="w-full bg-primary text-white font-bold py-3 rounded-lg hover:opacity-90">
        Place Bid
      </button>

      <% if (property.buyNowPrice) { %>
      <button class="w-full bg-green-600 text-white font-bold py-3 rounded-lg hover:bg-green-700">
        Buy Now
      </button>
      <% } %>

      <button class="w-full border border-gray-400 py-3 rounded-lg hover:bg-gray-100">
        Contact Seller
      </button>

    </div>

  </div>

</div>


<!-- IMAGE SLIDER SCRIPT -->
<script>
  const slides = document.getElementById("slides");
  let index = 0;

  const total = <%= property.media ? property.media.length : 0 %>;

  if (total > 1) {
    document.getElementById("prevBtn").onclick = () => {
      index = (index - 1 + total) % total;
      slides.style.transform = `translateX(-${index * 100}%)`;
    };

    document.getElementById("nextBtn").onclick = () => {
      index = (index + 1) % total;
      slides.style.transform = `translateX(-${index * 100}%)`;
    };
  }
</script>