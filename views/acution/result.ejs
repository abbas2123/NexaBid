<main class="flex-1 flex justify-center py-8 px-4 sm:px-6 md:px-8">
  <div class="w-full max-w-6xl flex flex-col gap-8">
    <!-- Breadcrumb -->
    <div class="flex flex-wrap items-center gap-2 text-sm">
      <a href="/" class="text-gray-500 hover:text-primary">Home</a>
      <span class="text-gray-300">/</span>
      <a href="/my-listings" class="text-gray-500 hover:text-primary">My Listings</a>
      <span class="text-gray-300">/</span>
      <span class="font-medium">Auction Result</span>
    </div>

    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
      <div>
        <div class="flex items-center gap-3">
          <h1 class="text-3xl md:text-4xl font-black">Auction Result</h1>

          <% if (property.status==='sold' ) { %>
            <span class="px-3 py-1 rounded-full bg-emerald-100 text-emerald-700 text-sm font-bold">
              Sold
            </span>
            <% } %>
        </div>

        <p class="text-gray-500 mt-1">
          Auction ID:
          <span class="font-mono font-medium">#<%= property._id %></span>
          ‚Ä¢ <%= property.address %>
        </p>
      </div>

      <div class="hidden md:block text-right">
        <p class="text-sm text-gray-500">Auction Ended</p>
        <p class="font-bold">
          <%= new Date(property.auctionEndsAt).toLocaleString() %>
        </p>
      </div>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- LEFT -->
      <div class="lg:col-span-2 flex flex-col gap-6">
        <!-- Property Card -->
        <div class="bg-white rounded-xl border overflow-hidden">
          <div class="h-64 md:h-80 bg-cover bg-center" style="
              background-image: url('<%= (property.media && property.media.length > 0) ? property.media[0].url : '/images/no-image.png' %>');
            "></div>

          <div class="p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 border-b pb-6 mb-6">
              <div>
                <p class="text-xs text-gray-500">Base Price</p>
                <p class="font-bold text-lg">‚Çπ <%= property.basePrice.toLocaleString('en-IN') %>
                </p>
              </div>

              <div>
                <p class="text-xs text-emerald-600">Winning Bid</p>
                <p class="font-bold text-lg text-emerald-600">
                  ‚Çπ <%= winningBid ? winningBid.amount.toLocaleString('en-IN') : '0' %>
                </p>
              </div>

              <div>
                <p class="text-xs text-gray-500">Total Bids</p>
                <p class="font-bold text-lg">
                  <%= totalBids %>
                </p>
              </div>

              <div>
                <p class="text-xs text-gray-500">Views</p>
                <p class="font-bold text-lg">
                  <%= property.views || 0 %>
                </p>
              </div>
            </div>

            <!-- Specs -->
            <div class="flex flex-wrap gap-3 text-sm">
              <span class="px-3 py-1 bg-gray-100 rounded">üõè <%= property.bedrooms %> Beds</span>
              <span class="px-3 py-1 bg-gray-100 rounded">üõÅ <%= property.bathrooms %> Baths</span>
              <span class="px-3 py-1 bg-gray-100 rounded">üìê <%= property.area %> sqft</span>
            </div>
          </div>
        </div>

        <!-- Info Note -->
        <div class="bg-blue-50 border border-blue-100 rounded-xl p-4 text-sm text-blue-800">
          <strong>Note:</strong>
          NexaBid does not handle payments. Please contact the buyer directly to complete payment,
          documentation, and handover.
        </div>
      </div>

      <!-- RIGHT -->
      <div class="flex flex-col gap-6">
        <!-- Winner -->
        <div class="bg-white rounded-xl border">
          <div class="p-6 border-b">
            <h3 class="font-bold mb-4">Winning Buyer</h3>

            <div class="flex items-center gap-4 mb-6">
              <% if (winner) { %>
                <img src="<%= winner.avatar ? winner.avatar : '/images/default-user.png' %>"
                  class="w-16 h-16 rounded-full border object-cover" />
                <% } else { %>
                  <img src="/images/default-user.png" class="w-16 h-16 rounded-full border object-cover" />
                  <% } %>

                    <div>
                      <p class="font-bold text-lg">
                        <%= winner ? winner.name : 'No Winner' %>
                      </p>
                      <p class="text-sm text-gray-500">Verified Buyer</p>
                    </div>
            </div>

            <div class="space-y-3 text-sm text-gray-600">
              <% if (winner && winner.phone) { %>
                <div>üìû <%= winner.phone %>
                </div>
                <% } else { %>
                  <div class="text-gray-400">üìû Phone not available</div>
                  <% } %>

                    <div>Email not available</div>
            </div>
          </div>

          <div class="p-6 bg-gray-50 rounded-b-xl">
            <p class="text-sm text-gray-500 mb-1">Final Offer</p>
            <p class="text-3xl font-black text-emerald-600">
              ‚Çπ <%= winningBid ? winningBid.amount.toLocaleString('en-IN') : '0' %>
            </p>

            <% if (winner && winner._id) { %>
              <a href="/chat/start/<%= winner._id %>/property/<%= property._id %>"
                class="mt-4 block text-center bg-primary text-white font-bold py-3 rounded-lg">
                Start Chat with Buyer
              </a>
              <% } else { %>
                <div class="mt-4 text-center text-gray-400 bg-gray-100 py-3 rounded-lg">
                  No buyer available
                </div>
                <% } %>

                  <p class="text-xs text-center text-gray-500 mt-2">
                    Discuss payment & handover directly
                  </p>
          </div>
        </div>

        <!-- Next Steps -->
        <div class="bg-white rounded-xl border p-6">
          <h3 class="font-bold mb-4">Next Steps</h3>
          <ul class="space-y-3 text-sm text-gray-600">
            <li>1Ô∏è‚É£ Contact buyer to confirm interest</li>
            <li>2Ô∏è‚É£ Finalize agreement & payment</li>
            <li>3Ô∏è‚É£ Schedule property handover</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</main>