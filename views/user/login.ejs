<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title || "NexaBid - Login" %>
  </title>
  <meta name="csrf-token" content="<%= csrfToken %>">

  <!-- TailwindCSS -->
  <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: '#1D4ED8',
            'background-light': '#FFFFFF',
            'background-dark': '#111827',
          },
          fontFamily: { display: ['Inter', 'sans-serif'] },
          borderRadius: { DEFAULT: '0.5rem' },
        },
      },
    };
  </script>

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }

    .error-msg {
      color: red;
      font-size: 0.875rem;
      margin-top: 4px;
    }
  </style>
</head>

<body class="bg-background-light dark:bg-background-dark font-display">
  <div class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="bg-background-light dark:bg-background-dark border-b border-gray-200 dark:border-gray-700">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white">NexaBid</a>

        <!-- Hamburger -->
        <button id="menu-toggle" class="md:hidden text-2xl text-gray-600 dark:text-gray-300">
          ‚ò∞
        </button>

        <!-- Desktop Menu -->
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-gray-500 dark:text-gray-300 hover:text-primary">Home</a>
          <a href="/about" class="text-gray-500 dark:text-gray-300 hover:text-primary">About</a>
          <a href="/contact" class="text-gray-500 dark:text-gray-300 hover:text-primary">Contact</a>
          <a href="/auth/signup"
            class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-800 dark:text-gray-200">
            Sign up
          </a>
        </div>
      </nav>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden px-4 py-3 space-y-3 text-center bg-gray-100 dark:bg-gray-800">
        <a href="/" class="block hover:text-primary py-1">Home</a>
        <a href="/about" class="block hover:text-primary py-1">About</a>
        <a href="/contact" class="block hover:text-primary py-1">Contact</a>
        <a href="/auth/signup" class="block py-2 bg-primary text-white rounded-lg hover:bg-blue-700">Sign up</a>
      </div>
    </header>

    <!-- Main -->
    <main class="flex-grow flex items-center justify-center py-12 px-4">
      <div class="w-full max-w-md space-y-8">
        <h2 class="text-center text-3xl font-bold text-gray-900 dark:text-white">Welcome back</h2>

        <form id="loginForm" class="space-y-6">
          <div class="space-y-4">
            <!-- Email -->
            <div>
              <input id="email" type="email" placeholder="Email"
                class="w-full px-4 py-3 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary" />
              <p id="emailError" class="error-msg hidden">Enter a valid email</p>
            </div>

            <!-- Password -->
            <div class="relative">
              <input id="password" type="password" placeholder="Password"
                class="w-full px-4 py-3 rounded-lg bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary pr-11" />
              <span id="togglePassword"
                class="absolute inset-y-0 right-3 flex items-center cursor-pointer select-none text-gray-500">
                üëÅÔ∏è
              </span>
            </div>
            <p id="passwordError" class="error-msg hidden">
              Password must be at least 6 characters
            </p>
          </div>

          <div class="text-right">
            <a href="/auth/forgot-password" class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary">
              Forgot password?
            </a>
          </div>

          <button type="submit" class="w-full py-3 bg-primary text-white rounded-lg hover:bg-blue-800 transition">
            Log in
          </button>
        </form>

        <!-- Divider -->
        <div class="flex items-center gap-2 my-4">
          <div class="flex-grow border-t border-gray-300 dark:border-gray-700"></div>
          <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap">
            Or continue with
          </span>
          <div class="flex-grow border-t border-gray-300 dark:border-gray-700"></div>
        </div>

        <!-- Google Button -->
        <a href="/auth/google"
          class="flex items-center justify-center w-full py-3 rounded-lg border bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-900 dark:text-white font-medium transition">
          <img src="https://www.google.com/favicon.ico" class="w-5 h-5 mr-2" alt="Google Logo" />
          Continue with Google
        </a>

        <p class="text-center text-sm">
          <span class="text-gray-600 dark:text-gray-400">Don't have an account?</span>
          <a href="/auth/signup" class="font-medium text-primary hover:text-blue-700">Sign up</a>
        </p>
      </div>
    </main>
  </div>

  <!-- SweetAlert -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.getElementById('menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      const loginForm = document.getElementById('loginForm');
      const emailInput = document.getElementById('email');
      const passwordInput = document.getElementById('password');
      const toggleBtn = document.getElementById('togglePassword');
      const emailError = document.getElementById('emailError');
      const passwordError = document.getElementById('passwordError');

      // Regex for email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      // Mobile Menu Toggle
      menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });

      // Toggle Password Visibility
      toggleBtn.addEventListener('click', () => {
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;
        toggleBtn.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
      });

      // Login Submit
      loginForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = emailInput.value.trim();
        const password = passwordInput.value.trim();
        // Client validation with SweetAlert
        if (!email) {
          return Swal.fire({ icon: 'error', title: 'Validation Error', text: 'Email is required' });
        }
        if (!emailRegex.test(email)) {
          return Swal.fire({ icon: 'error', title: 'Validation Error', text: 'Please enter a valid email' });
        }
        if (!password) {
          return Swal.fire({ icon: 'error', title: 'Validation Error', text: 'Password is required' });
        }
        if (password.length < 6) {
          return Swal.fire({ icon: 'error', title: 'Validation Error', text: 'Password must be at least 6 characters' });
        }

        try {
          const res = await fetch('/auth/login', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ email, password }),
          });

          const data = await res.json();

          if (!data.success) {
            return Swal.fire({
              icon: 'error',
              title: 'Login Failed',
              text: data.message,
            });
          }

          Swal.fire({
            icon: 'success',
            title: 'Login Successful üéâ',
            timer: 1500,
            showConfirmButton: false,
          });

          setTimeout(() => {
            window.location.replace('/auth/dashboard');
          }, 1200);
        } catch (err) {
          Swal.fire({
            icon: 'error',
            title: 'Server Error',
            text: 'Please try again later',
          });
        }
      });
    });
  </script>
  <script>
    const params = new URLSearchParams(window.location.search);
    const error = params.get('error');
    if (error === 'blocked') {
      Swal.fire({
        icon: 'error',
        title: 'Account Blocked',
        text: 'Your account has been blocked. Please contact support.',
        confirmButtonColor: '#d33',
      });
    }
    if (error === 'google') {
      Swal.fire({
        icon: 'error',
        title: 'Google Login Blocked',
        text: 'This email is registered using password. Please login with email & password.',
      });
    }
    // CSRF Global Fetch Interceptor
    (function () {
      const originalFetch = window.fetch;
      window.fetch = function (url, options) {
        options = options || {};
        const method = (options.method || 'GET').toUpperCase();
        const csrfToken = document.querySelector('meta[name="csrf-token"]')?.getAttribute('content');

        if (csrfToken && ['POST', 'PUT', 'PATCH', 'DELETE'].includes(method)) {
          options.headers = options.headers || {};
          if (options.headers instanceof Headers) {
            options.headers.set('X-CSRF-Token', csrfToken);
          } else {
            options.headers['X-CSRF-Token'] = csrfToken;
          }
        }
        return originalFetch(url, options);
      };
    })();
  </script>
</body>

</html>