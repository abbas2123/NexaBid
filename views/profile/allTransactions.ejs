<body class="bg-gray-50 min-h-screen">

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-10">
    <!-- Back Button & Header -->
    <div class="mb-6">
        <button 
            onclick="window.location.href='/wallet'"
            class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 transition-colors mb-4">
            <span class="material-icons">arrow_back</span>
            <span class="font-medium">Back to Wallet</span>
        </button>
        
        <div class="flex items-center justify-between flex-wrap gap-4">
            <div>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">All Transactions</h1>
                <p class="text-gray-600">
                    Complete history of your wallet transactions
                </p>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <form id="filterForm" method="GET" action="/wallet/transactions">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Transaction Type</label>
                    <select 
                        name="type" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent">
                        <option value="">All Types</option>
                        <option value="credit" <%= filters.type === 'credit' ? 'selected' : '' %>>Credit</option>
                        <option value="debit" <%= filters.type === 'debit' ? 'selected' : '' %>>Debit</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Source</label>
                    <select 
                        name="source" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent">
                        <option value="">All Sources</option>
                        <% availableSources.forEach(src => { %>
                            <option value="<%= src %>" <%= filters.source === src ? 'selected' : '' %>>
                                <%= src.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">From Date</label>
                    <input 
                        type="date" 
                        name="fromDate"
                        value="<%= filters.fromDate %>"
                        max="<%= new Date().toISOString().split('T')[0] %>"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">To Date</label>
                    <input 
                        type="date" 
                        name="toDate"
                        value="<%= filters.toDate %>"
                        max="<%= new Date().toISOString().split('T')[0] %>"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent">
                </div>
            </div>
            <div class="mt-4 flex gap-3">
                <button 
                    type="submit"
                    class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
                    Apply Filters
                </button>
                <button 
                    type="button"
                    onclick="resetFilters()"
                    class="px-6 py-2 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-colors">
                    Reset
                </button>
            </div>
        </form>
    </div>

    <!-- Transactions Table -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <% if (transactions && transactions.length > 0) { %>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200 bg-gray-50">
                        <th class="py-4 px-6 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Transaction
                        </th>
                        <th class="py-4 px-6 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Details
                        </th>
                        <th class="py-4 px-6 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Amount
                        </th>
                        <th class="py-4 px-6 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Balance After
                        </th>
                        <th class="py-4 px-6 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
                            Date & Time
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% transactions.forEach(transaction => { %>
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="py-5 px-6">
                            <div class="flex items-center gap-4">
                                <div class="w-11 h-11 <%= transaction.type === 'credit' ? 'bg-green-100' : 'bg-red-100' %> rounded-xl flex items-center justify-center flex-shrink-0">
                                    <span class="material-icons text-xl <%= transaction.type === 'credit' ? 'text-green-600' : 'text-red-600' %>">
                                        <%= transaction.type === 'credit' ? 'arrow_downward' : 'arrow_upward' %>
                                    </span>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-900 capitalize">
                                        <%= transaction.type %>
                                    </p>
                                    <p class="text-sm text-gray-500">
                                        <%= transaction.source ? transaction.source.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) : 'N/A' %>
                                    </p>
                                </div>
                            </div>
                        </td>
                        <td class="py-5 px-6">
                            <% if (transaction.metadata && transaction.metadata.reason) { %>
                            <p class="text-sm text-gray-700"><%= transaction.metadata.reason %></p>
                            <% } else { %>
                            <p class="text-sm text-gray-400">No details</p>
                            <% } %>
                        </td>
                        <td class="py-5 px-6 text-right">
                            <span class="text-base font-bold <%= transaction.type === 'credit' ? 'text-green-600' : 'text-red-600' %>">
                                <%= transaction.type === 'credit' ? '+' : '-' %>₹<%= Math.abs(transaction.amount).toLocaleString('en-IN') %>
                            </span>
                        </td>
                        <td class="py-5 px-6 text-right">
                            <span class="text-sm font-medium text-gray-900">
                                ₹<%= transaction.balanceAfter.toLocaleString('en-IN') %>
                            </span>
                        </td>
                        <td class="py-5 px-6 text-right">
                            <p class="text-sm font-medium text-gray-900">
                                <%= new Date(transaction.createdAt).toLocaleDateString('en-IN', { 
                                    day: 'numeric', 
                                    month: 'short', 
                                    year: 'numeric' 
                                }) %>
                            </p>
                            <p class="text-xs text-gray-500">
                                <%= new Date(transaction.createdAt).toLocaleTimeString('en-IN', { 
                                    hour: '2-digit', 
                                    minute: '2-digit' 
                                }) %>
                            </p>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
        <%
        function buildPaginationUrl(page) {
            const params = new URLSearchParams();
            params.set('page', page);
            if (filters.type) params.set('type', filters.type);
            if (filters.source) params.set('source', filters.source);
            if (filters.fromDate) params.set('fromDate', filters.fromDate);
            if (filters.toDate) params.set('toDate', filters.toDate);
            return '/wallet/transactions?' + params.toString();
        }
        %>
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                <p class="text-sm text-gray-700">
                    Showing <%= ((currentPage - 1) * 20) + 1 %> to <%= Math.min(currentPage * 20, totalTransactions) %> of <%= totalTransactions %> transactions
                </p>
                <div class="flex gap-2 flex-wrap justify-center">
                    <% if (currentPage > 1) { %>
                    <a href="<%= buildPaginationUrl(currentPage - 1) %>" 
                       class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-1">
                        <span class="material-icons text-sm">chevron_left</span>
                        <span class="hidden sm:inline">Previous</span>
                    </a>
                    <% } %>
                    
                    <% 
                    const startPage = Math.max(1, currentPage - 2);
                    const endPage = Math.min(totalPages, currentPage + 2);
                    
                    if (startPage > 1) { %>
                        <a href="<%= buildPaginationUrl(1) %>" 
                           class="px-4 py-2 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 rounded-lg transition-colors">
                            1
                        </a>
                        <% if (startPage > 2) { %>
                            <span class="px-3 py-2 text-gray-400">...</span>
                        <% } %>
                    <% } %>
                    
                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <a href="<%= buildPaginationUrl(i) %>" 
                           class="px-4 py-2 <%= i === currentPage ? 'bg-indigo-600 text-white font-semibold' : 'bg-white text-gray-700 border border-gray-300 hover:bg-gray-50' %> rounded-lg transition-colors">
                            <%= i %>
                        </a>
                    <% } %>
                    
                    <% if (endPage < totalPages) { %>
                        <% if (endPage < totalPages - 1) { %>
                            <span class="px-3 py-2 text-gray-400">...</span>
                        <% } %>
                        <a href="<%= buildPaginationUrl(totalPages) %>" 
                           class="px-4 py-2 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50 rounded-lg transition-colors">
                            <%= totalPages %>
                        </a>
                    <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                    <a href="<%= buildPaginationUrl(currentPage + 1) %>" 
                       class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors flex items-center gap-1">
                        <span class="hidden sm:inline">Next</span>
                        <span class="material-icons text-sm">chevron_right</span>
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
        <% } %>
        <% } else { %>
        <div class="py-16 px-6 text-center">
            <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-5">
                <span class="material-icons text-5xl text-gray-400">receipt_long</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">
                No Transactions Found
            </h3>
            <p class="text-gray-600 mb-6">
                <% if (filters.type || filters.source || filters.fromDate || filters.toDate) { %>
                    No transactions match your filter criteria. Try adjusting your filters.
                <% } else { %>
                    Your wallet transaction history will appear here
                <% } %>
            </p>
            <% if (filters.type || filters.source || filters.fromDate || filters.toDate) { %>
            <button 
                onclick="resetFilters()"
                class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
                Clear Filters
            </button>
            <% } %>
        </div>
        <% } %>
    </div>
</main>

<script>
    function resetFilters() {
        window.location.href = '/wallet/transactions';
    }
</script>

</body>
