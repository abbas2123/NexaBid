  <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100">Contact Us</h1>

      <!-- FORM START -->
      <form class="mt-8 space-y-6 w-full">
        <!-- NAME -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-600 dark:text-gray-300">
            Your Name
          </label>
          <input
            type="text"
            id="name"
            class="block w-full h-12 px-4 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-primary focus:border-primary"
            placeholder="Enter your name"
          />
        </div>

        <!-- EMAIL -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-600 dark:text-gray-300">
            Your Email
          </label>
          <input
            type="email"
            id="email"
            class="block w-full h-12 px-4 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-primary focus:border-primary"
            placeholder="Enter your email"
          />
        </div>

        <!-- SUBJECT -->
        <div>
          <label for="subject" class="block text-sm font-medium text-gray-600 dark:text-gray-300">
            Subject
          </label>
          <input
            type="text"
            id="subject"
            class="block w-full h-12 px-4 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-primary focus:border-primary"
            placeholder="Enter the subject"
          />
        </div>

        <!-- MESSAGE -->
        <div>
          <label for="message" class="block text-sm font-medium text-gray-600 dark:text-gray-300">
            Message
          </label>
          <textarea
            id="message"
            rows="5"
            class="block w-full p-4 bg-gray-50 dark:bg-gray-900 border border-gray-300 dark:border-gray-700 rounded-md focus:ring-primary focus:border-primary"
            placeholder="Write your message"
          ></textarea>
        </div>

        <!-- SUBMIT BUTTON -->
        <button
          type="submit"
          class="rounded-md bg-primary text-white font-semibold h-12 w-full sm:w-40 hover:bg-blue-800 transition-all duration-300"
        >
          Submit
        </button>
      </form>
