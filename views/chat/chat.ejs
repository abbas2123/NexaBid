<main class="flex h-[calc(100vh-80px)] bg-gradient-to-br from-[#f0f4ff] to-[#e8f0fe]">
  <!-- CHAT LIST -->
  <aside
    class="w-full md:w-96 border-r border-[#dce4f7] bg-white/95 backdrop-blur-sm flex flex-col <% if (thread) { %>hidden md:flex<% } else { %>flex<% } %> shadow-lg">
    <div class="p-5 border-b border-[#e4e8ff] bg-gradient-to-r from-blue-50 to-indigo-50">
      <h2 class="font-bold text-xl text-slate-800 flex items-center gap-2">
        <span class="material-symbols-outlined text-blue-600">chat</span>
        Messages
      </h2>
    </div>
    <div class="flex-1 overflow-y-auto">
      <% threads.forEach(t=> { %>
        <a href="/chat/thread/<%= t._id %>"
          class="thread-row relative flex items-center gap-3 p-4 border-b border-slate-100 hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200 hover:shadow-sm <% if (thread && thread._id.toString() === t._id.toString()) { %>bg-gradient-to-r from-blue-50 to-indigo-50 border-l-4 border-l-blue-500<% } %>"
          data-thread-id="<%= t._id %>" data-other-id="<%= t.other?._id %>">
          <div class="relative">
            <img src="<%= t.other?.avatar || '/images/default-user.png' %>"
              class="w-12 h-12 rounded-full object-cover border-2 border-white shadow-md"
              data-user-name="<%= t.other?.name || 'User' %>" onerror="handleAvatarError(this)" />
            <% if (t.other?.isOnline) { %>
              <span
                class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-green-500 border-2 border-white rounded-full"></span>
              <% } %>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between mb-1">
              <p class="font-semibold text-sm text-slate-900 truncate">
                <%= t.other?.name || 'User' %>
              </p>
            </div>
            <% if (t.lastMessage) { %>
              <p class="last-message text-xs text-slate-500 truncate">
                <%= t.lastMessage %>
              </p>
              <% } else { %>
                <p class="last-message text-xs text-slate-400 italic truncate">No messages yet</p>
                <% } %>
          </div>
          <% if (t.unread && t.unread> 0) { %>
            <span
              class="unread-badge inline-flex items-center justify-center min-w-[22px] h-6 px-2 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white text-xs font-semibold shadow-md">
              <%= t.unread %>
            </span>
            <% } else { %>
              <span
                class="unread-badge hidden min-w-[22px] h-6 px-2 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 text-white text-xs"></span>
              <% } %>
        </a>
        <% }); %>
    </div>
  </aside>

  <!-- CHAT WINDOW -->
  <% if (thread) { %>
    <section
      class="flex-1 flex flex-col bg-gradient-to-br from-[#fafbff] to-[#f0f4ff] text-slate-900 <% if (thread) { %>flex<% } else { %>hidden md:flex<% } %>">
      <!-- mobile header -->
      <header
        class="md:hidden flex items-center gap-3 px-4 py-3 bg-white/95 backdrop-blur-sm border-b border-[#e4e8ff] shadow-sm">
        <button type="button" onclick="window.location.href = '/chat'"
          class="p-2 rounded-full hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
          <span class="material-symbols-outlined text-slate-700">arrow_back</span>
        </button>
        <div class="relative">
          <img src="<%= otherUser.avatar || '/images/default-user.png' %>"
            class="w-10 h-10 rounded-full object-cover border-2 border-white shadow-md"
            data-user-name="<%= otherUser.name %>" onerror="handleAvatarError(this)" />
          <% if (otherUser.isOnline) { %>
            <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></span>
            <% } %>
        </div>
        <div class="min-w-0 flex-1">
          <p class="font-bold text-sm truncate text-slate-800">
            <%= otherUser.name %>
          </p>
          <p class="text-[11px] text-slate-500 truncate">
            <span id="typing-status-mobile" class="text-blue-600 font-medium hidden"></span>
            <span class="user-status-mobile">
              <% if (otherUser.isOnline) { %>
                <span class="text-green-600 font-medium">Online</span>
                <% } else if (otherUser.lastSeen) { %>
                  <span class="text-slate-500">Last seen <%= new Date(otherUser.lastSeen).toLocaleTimeString([], {
                      hour: '2-digit' , minute: '2-digit' }) %></span>
                  <% } else { %>
                    <span class="text-slate-400">Offline</span>
                    <% } %>
            </span>
          </p>
        </div>
      </header>

      <!-- desktop header -->
      <header
        class="hidden md:flex items-center gap-4 px-6 py-4 bg-white/95 backdrop-blur-sm border-b border-[#e4e8ff] shadow-sm">
        <div class="relative">
          <img src="<%= otherUser.avatar || '/images/default-user.png' %>"
            class="w-11 h-11 rounded-full object-cover border-2 border-white shadow-md"
            data-user-name="<%= otherUser.name %>" onerror="handleAvatarError(this)" />
          <% if (otherUser.isOnline) { %>
            <span class="absolute bottom-0 right-0 w-3.5 h-3.5 bg-green-500 border-2 border-white rounded-full"></span>
            <% } %>
        </div>
        <div class="min-w-0 flex-1">
          <p class="font-bold text-base truncate text-slate-800">
            <%= otherUser.name %>
          </p>
          <p class="text-xs text-slate-500 truncate">
            <span id="typing-status" class="text-blue-600 font-medium hidden"></span>
            <span class="user-status">
              <% if (otherUser.isOnline) { %>
                <span class="text-green-600 font-medium flex items-center gap-1">
                  <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                  Online
                </span>
                <% } else if (otherUser.lastSeen) { %>
                  <span class="text-slate-500">Last seen <%= new Date(otherUser.lastSeen).toLocaleTimeString([], {
                      hour: '2-digit' , minute: '2-digit' }) %></span>
                  <% } else { %>
                    <span class="text-slate-400">Offline</span>
                    <% } %>
            </span>
          </p>
        </div>
      </header>

      <!-- messages -->
      <div id="messages" class="flex-1 overflow-y-auto px-4 py-6 space-y-3">
        <% messages.forEach(m=> { %> <% const mine=m.senderId._id.toString()===user._id.toString(); const
            otherId=otherUser?._id?.toString(); const delivered=otherId && m.deliveredTo?.some(x=>
            x.toString() === otherId); const seen = otherId && m.readBy?.some(x => x.toString() ===
            otherId); %>
            <div class="flex <%= mine ? 'justify-end' : 'justify-start' %> animate-fade-in">
              <div
                class="max-w-[75%] px-4 py-3 rounded-2xl text-sm shadow-lg transition-all duration-200 hover:shadow-xl <%= mine ? 'bg-gradient-to-br from-blue-500 via-blue-600 to-indigo-600 text-white rounded-br-sm' : 'bg-white text-slate-800 border border-slate-200 rounded-bl-sm' %>">
                <% if (m.fileUrl) { %>
                  <div class="flex items-center gap-2 mb-2 p-2 rounded-lg <%= mine ? 'bg-white/10' : 'bg-slate-50' %>">
                    <span
                      class="inline-flex items-center justify-center w-9 h-9 rounded-full <%= mine ? 'bg-white/20' : 'bg-blue-100' %> text-sm">
                      <span
                        class="material-symbols-outlined text-base <%= mine ? 'text-white' : 'text-blue-600' %>">attach_file</span>
                    </span>
                    <a href="<%= m.fileUrl %>" target="_blank"
                      class="<%= mine ? 'text-white hover:text-blue-100' : 'text-blue-600 hover:text-blue-700' %> underline text-xs break-all font-medium">
                      <%= m.fileName || 'Document' %>
                    </a>
                  </div>
                  <% } %>
                    <% if (m.message) { %>
                      <div class="break-words leading-relaxed">
                        <%= m.message %>
                      </div>
                      <% } %>
                        <% if (mine) { %>
                          <div class="flex items-center justify-end gap-1 mt-2 text-[11px] opacity-90">
                            <% if (seen) { %>
                              <span class="tick-status font-bold" style="color: #10b981"
                                data-msg-id="<%= m._id %>">‚úì‚úì</span>
                              <% } else if (delivered) { %>
                                <span class="tick-status font-semibold" style="color: rgba(255,255,255,0.7)"
                                  data-msg-id="<%= m._id %>">‚úì‚úì</span>
                                <% } else { %>
                                  <span class="tick-status" style="color: rgba(255,255,255,0.6)"
                                    data-msg-id="<%= m._id %>">‚úì</span>
                                  <% } %>
                          </div>
                          <% } %>
              </div>
            </div>
            <% }); %>
      </div>

      <!-- input row -->
      <form id="chat-form" action="/chat/thread/<%= thread._id %>/send" method="POST" enctype="multipart/form-data"
        class="flex items-center gap-3 px-4 py-4 bg-white/95 backdrop-blur-sm border-t border-[#e4e8ff] shadow-lg">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input id="file-input" type="file" name="file" class="hidden" />
        <button type="button" id="attach-btn"
          class="p-3 rounded-full bg-gradient-to-br from-blue-50 to-indigo-50 hover:from-blue-100 hover:to-indigo-100 transition-all duration-200 shadow-sm hover:shadow-md group">
          <span
            class="material-symbols-outlined text-blue-600 group-hover:scale-110 transition-transform">attach_file</span>
        </button>
        <textarea name="message" autocomplete="off" placeholder="Type a message..." rows="1"
          class="flex-1 px-4 py-3 rounded-2xl text-sm bg-slate-50 border-2 border-slate-200 text-slate-800 outline-none focus:ring-2 focus:ring-blue-200 focus:border-blue-500 focus:bg-white transition-all duration-200 resize-none overflow-y-hidden max-h-32"></textarea>
        <button
          class="px-5 py-3 rounded-full bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white text-sm font-semibold shadow-md hover:shadow-lg transition-all duration-200 flex items-center gap-2 group">
          <span>Send</span>
          <span class="material-symbols-outlined text-base group-hover:translate-x-1 transition-transform">send</span>
        </button>
      </form>
    </section>
    <% } else { %>
      <section class="flex-1 hidden md:flex items-center justify-center text-slate-400">
        Select a chat to start messaging
      </section>
      <% } %>
</main>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  const THREADID = '<%= thread ? thread._id.toString() : "" %>';
  const USERID = '<%= user._id.toString() %>';
  const OTHERUSERID = '<%= (thread && otherUser) ? otherUser._id.toString() : "" %>';
  const HASTHREAD = <%= thread ? "true" : "false" %>;

  // Avatar initials helper
  function createAvatarInitial(name) {
    const initial = (name || 'U').charAt(0).toUpperCase();
    const colors = [
      'from-blue-400 to-indigo-500',
      'from-purple-400 to-pink-500',
      'from-green-400 to-teal-500',
      'from-orange-400 to-red-500',
      'from-cyan-400 to-blue-500'
    ];
    const colorIndex = initial.charCodeAt(0) % colors.length;
    return {
      initial,
      gradient: colors[colorIndex]
    };
  }

  function handleAvatarError(img) {
    const name = img.getAttribute('data-user-name') || 'U';
    const { initial, gradient } = createAvatarInitial(name);
    const size = img.classList.contains('w-12') ? 'w-12 h-12 text-lg' :
      img.classList.contains('w-11') ? 'w-11 h-11 text-base' :
        'w-10 h-10 text-sm';

    const avatarDiv = document.createElement('div');
    avatarDiv.className = `${size} rounded-full border-2 border-white shadow-md bg-gradient-to-br ${gradient} flex items-center justify-center text-white font-bold`;
    avatarDiv.textContent = initial;

    img.parentNode.replaceChild(avatarDiv, img);
  }

  // Initialize all avatars on page load
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('img[data-user-name]').forEach(img => {
      img.addEventListener('error', function () {
        handleAvatarError(this);
      });

      // Check if image is already broken
      if (!img.complete || img.naturalHeight === 0) {
        handleAvatarError(img);
      }
    });
  });

  const form = document.getElementById('chat-form');
  const input = form?.querySelector('textarea[name="message"]');
  const box = document.getElementById('messages');
  const fileInput = document.getElementById('file-input');
  const attachBtn = document.getElementById('attach-btn');

  function findRow(threadId) {
    return document.querySelector(`.thread-row[data-thread-id="${threadId}"]`);
  }

  function setLastMessage(threadId, text) {
    const row = findRow(threadId);
    const lastMsgEl = row?.querySelector('.last-message');
    if (lastMsgEl) lastMsgEl.textContent = text || '';
  }

  function clearUnread(threadId) {
    const row = findRow(threadId);
    const unreadEl = row?.querySelector('.unread-badge');
    if (!unreadEl) return;
    unreadEl.classList.add('hidden');
    unreadEl.textContent = '';
  }

  function incrementUnread(threadId) {
    const row = findRow(threadId);
    const unreadEl = row?.querySelector('.unread-badge');
    if (!unreadEl) return;
    const current = parseInt(unreadEl.textContent) || 0;
    unreadEl.textContent = current + 1;
    unreadEl.classList.remove('hidden');
  }

  function formatLastSeen(date) {
    if (!date) return 'Offline';
    const now = new Date();
    const then = new Date(date);
    const diff = Math.floor((now - then) / 1000); // seconds

    if (diff < 60) return 'Last seen just now';
    if (diff < 3600) return `Last seen ${Math.floor(diff / 60)}m ago`;
    if (diff < 86400) return `Last seen ${Math.floor(diff / 3600)}h ago`;
    return `Last seen ${then.toLocaleDateString()}`;
  }

  function scrollToBottom() {
    if (box) box.scrollTop = box.scrollHeight;
  }

  function appendMessage(msg, isMine) {
    if (!box) return;
    const bubble = document.createElement('div');
    bubble.className = `flex ${isMine ? 'justify-end' : 'justify-start'}`;

    const content = document.createElement('div');
    content.className = `max-w-[78%] px-3 py-2 rounded-2xl text-sm shadow-sm ${isMine
      ? 'bg-gradient-to-br from-[#2b59ff] to-[#7c3aed] text-white rounded-br-md'
      : 'bg-white text-slate-800 border border-[#e4e8ff] rounded-bl-md'
      }`;

    if (msg.fileUrl) {
      const fileDiv = document.createElement('div');
      fileDiv.className = 'flex items-center gap-2 mb-1';
      fileDiv.innerHTML = `
        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-[#eef2ff] text-xs border border-[#e4e8ff]">üìé</span>
        <a href="${msg.fileUrl}" target="_blank" class="${isMine ? 'text-white' : 'text-[#2b59ff]'} underline text-xs break-all">
          ${msg.fileName || 'Document'}
        </a>
      `;
      content.appendChild(fileDiv);
    }

    if (msg.message) {
      const textDiv = document.createElement('div');
      textDiv.className = 'break-words';
      textDiv.textContent = msg.message;
      content.appendChild(textDiv);
    }

    if (isMine) {
      const statusDiv = document.createElement('div');
      statusDiv.className = 'flex items-center justify-end gap-1 mt-1 text-[12px]';
      statusDiv.innerHTML = `<span class="tick-status" style="color: #D1D5DB" data-msg-id="${msg._id}">‚úì</span>`;
      content.appendChild(statusDiv);
    }

    bubble.appendChild(content);
    box.appendChild(bubble);
    scrollToBottom();
  }

  // Socket events
  // Socket events

  // Join user's personal room for badge updates
  socket.emit('joinUser', USERID);

  if (HASTHREAD) {
    socket.emit('join_chat', { threadId: THREADID });
    clearUnread(THREADID);
    scrollToBottom();
  }

  // Handle new messages
  socket.on('new_message', (msg) => {

    // BUG #5 FIX: Fix senderId check (object vs string)
    const senderIdStr = typeof msg.senderId === 'object' ? msg.senderId._id : msg.senderId;
    const isMine = senderIdStr.toString() === USERID;

    // BUG #2 FIX: Fix ThreadId comparison (ObjectId vs String)
    // Check if message belongs to current thread
    const msgThreadId = typeof msg.threadId === 'object' ? msg.threadId._id : msg.threadId;
    if (!HASTHREAD || msgThreadId.toString() !== THREADID) {
      setLastMessage(msgThreadId.toString(), msg.message || msg.fileName || 'Attachment');
      if (!isMine) {
        incrementUnread(msgThreadId.toString());
      }
      return;
    }

    appendMessage(msg, isMine);
    setLastMessage(THREADID, msg.message || msg.fileName || 'Attachment');

    if (!isMine) {
      // Mark read immediately if window is focused, else logic handled elsewhere?
      // For now, simpler: mark read if open.
      socket.emit('mark_read', { threadId: THREADID });
    }
  });

  // Handle inbox messages (for threads not currently open)
  socket.on('notification', (data) => {
    // BUG: Ensure we don't double count if we just handled it in new_message
    // Logic: new_message handles current thread + sidebar update.
    // notification handles ONLY sidebar update for OTHERS.
    // But server only sends notification to those NOT in room.
    // So this is safe.

    if (data.type === 'message') {
      const tId = typeof data.threadId === 'object' ? data.threadId._id : data.threadId;
      if (tId.toString() !== THREADID) {
        incrementUnread(tId.toString());
        setLastMessage(tId.toString(), data.message);
      }
    }
  });

  // Handle messages seen
  socket.on('messages_seen', (data) => {
    if (data.threadId !== THREADID) return;
    if (data.seenBy === OTHERUSERID) {
      document.querySelectorAll('.tick-status').forEach((el) => {
        el.style.color = '#10B981';
        el.textContent = '‚úì‚úì';
        el.classList.remove('font-semibold');
        el.classList.add('font-bold');
      });
    }
  });

  // Handle messages delivered
  socket.on('messages_delivered', (data) => {
    if (data.threadId !== THREADID) return;
    if (data.deliveredBy === OTHERUSERID) {
      document.querySelectorAll('.tick-status').forEach((el) => {
        if (!el.classList.contains('font-bold')) {
          el.style.color = '#E5E7EB';
          el.textContent = '‚úì‚úì';
          el.classList.add('font-semibold');
        }
      });
    }
  });

  socket.on('user_status', (data) => {
    if (data.userId === OTHERUSERID) {
      const statusEls = document.querySelectorAll('.user-status, .user-status-mobile');
      statusEls.forEach(el => {
        if (data.isOnline) {
          el.innerHTML = '<span class="text-green-500 font-medium">Online</span>';
        } else {
          el.textContent = formatLastSeen(data.lastSeen);
        }
      });
    }
  });

  // Typing indicators
  let typingTimeout;
  let isTyping = false;
  const typingStatusEl = document.getElementById('typing-status');
  const typingStatusMobileEl = document.getElementById('typing-status-mobile');

  function updateTypingUI(show, text = '') {
    const statusEls = document.querySelectorAll('.user-status, .user-status-mobile');
    const typingEls = [typingStatusEl, typingStatusMobileEl];

    typingEls.forEach(el => {
      if (el) {
        if (show) {
          el.textContent = text;
          el.classList.remove('hidden');
        } else {
          el.classList.add('hidden');
          el.textContent = '';
        }
      }
    });

    // Hide user status (Online/Offline) when typing
    statusEls.forEach(el => {
      if (el) {
        if (show) el.classList.add('hidden');
        else el.classList.remove('hidden');
      }
    });
  }

  if (input) {
    // Auto-resize logic
    input.addEventListener('input', () => {
      input.style.height = 'auto';
      input.style.height = input.scrollHeight + 'px';

      if (!isTyping) {
        socket.emit('typing', { threadId: THREADID });
        isTyping = true;
      }

      clearTimeout(typingTimeout);
      typingTimeout = setTimeout(() => {
        socket.emit('stop_typing', { threadId: THREADID });
        isTyping = false;
      }, 1500); // stop after 1.5 sec idle
    });

    // Handle Enter to send
    input.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        form.dispatchEvent(new Event('submit'));
      }
    });
  }

  socket.on('userTyping', (data) => {
    if (data.userId === OTHERUSERID) {
      updateTypingUI(true, 'typing...');
    }
  });

  socket.on('userStopTyping', (data) => {
    if (data.userId === OTHERUSERID) {
      updateTypingUI(false);
    }
  });

  // Form submit handler
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const text = input.value.trim();
      if (!text) return;

      socket.emit('send_message', {
        threadId: THREADID,
        message: text,
      });

      input.value = '';
      input.style.height = 'auto'; // Reset height

      // Stop typing immediately when message is sent
      clearTimeout(typingTimeout);
      socket.emit('stop_typing', { threadId: THREADID });
      isTyping = false;
    });
  }

  // File upload
  if (attachBtn && fileInput) {
    attachBtn.addEventListener('click', () => fileInput.click());
    fileInput.addEventListener('change', async (e) => {
      if (e.target.files.length > 0) {
        const file = e.target.files[0];
        const formData = new FormData();
        formData.append('file', file);

        const originalBtnContent = attachBtn.innerHTML;
        // attachBtn.innerHTML = '<span class="animate-spin inline-block">‚è≥</span>';
        attachBtn.disabled = true;

        Swal.fire({
          title: 'Uploading File...',
          text: 'Please wait',
          allowOutsideClick: false,
          didOpen: () => {
            Swal.showLoading();
          }
        });

        try {
          if (!THREADID) throw new Error('No thread selected');

          const response = await fetch(`/chat/thread/${THREADID}/upload`, {
            method: 'POST',
            body: formData,
          });

          if (!response.ok) {
            const errorText = await response.text();
            let errorMessage = 'Failed to upload file';
            try {
              const errorJson = JSON.parse(errorText);
              errorMessage = errorJson.message || errorMessage;
            } catch (e) {
              console.error('Non-JSON error response:', errorText);
            }
            throw new Error(errorMessage);
          }

          const result = await response.json();
          if (result.success) {
          } else {
            alert(result.message || 'Failed to upload file');
          }
        } catch (error) {
          console.error('Upload error:', error);
          alert('Failed to upload file');
        } finally {
          attachBtn.innerHTML = originalBtnContent;
          attachBtn.disabled = false;
          fileInput.value = ''; // Clear input
        }
      }
    });
  }
</script>

<!-- Update chat badge when thread is opened -->
<% if (thread) { %>
  <script>
    // Wait for backend to process markThreadRead, then update badge
    setTimeout(() => {
      if (typeof window.loadUnreadMessageCount === 'function') {
        window.loadUnreadMessageCount();
      }
    }, 500);
  </script>
  <% } %>