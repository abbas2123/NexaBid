<main class="flex h-[calc(100vh-80px)] bg-[#f6f8ff]">

  <!-- CHAT LIST -->
  <aside class="w-full md:w-96 border-r border-[#e4e8ff] bg-white flex flex-col
           <% if (thread) { %>hidden md:flex<% } else { %>flex<% } %>">
    <div class="p-4 border-b border-[#e4e8ff] flex items-center justify-between">
      <h2 class="font-bold text-lg text-slate-900">Messages</h2>
    </div>
    <div>
      <div class="flex-1 overflow-y-auto">
        <% threads.forEach(t=> { %>
          <a href="/chat/thread/<%= t._id %>" class="thread-row flex items-center gap-3 p-3 hover:bg-[#f6f8ff]
                 <% if (thread && thread._id.toString() === t._id.toString()) { %>bg-[#f6f8ff]<% } %>"
            data-thread-id="<%= t._id %>" data-other-id="<%= t.other?._id %>">
            <img src="<%= t.other?.avatar || '/images/default-user.png' %>"
              class="w-10 h-10 rounded-full object-cover border border-[#e4e8ff]" />
            <div class="flex-1 min-w-0">
              <p class="font-semibold text-sm text-slate-900 truncate">
                <%= t.other?.name || 'User' %>
              </p>
              <% if (t.lastMessage) { %>
                <p class="last-message text-xs text-slate-500 truncate">
                  <%= t.lastMessage %>
                </p>
                <% } else { %>
                  <p class="last-message text-xs text-slate-500 truncate"></p>
                  <% } %>
            </div>
            <% if (t.unread && t.unread> 0) { %>
              <span class="unread-badge ml-2 inline-flex items-center justify-center min-w-[20px] h-5 px-1
                       rounded-full bg-[#2b59ff] text-white text-xs">
                <%= t.unread %>
              </span>
              <% } else { %>
                <span class="unread-badge hidden ml-2 min-w-[20px] h-5 px-1
                       rounded-full bg-[#2b59ff] text-white text-xs"></span>
                <% } %>
          </a>
          <% }); %>
      </div>
    </div>
  </aside>

  <!-- CHAT WINDOW -->
  <% if (thread) { %>
    <section class="flex-1 flex flex-col bg-[#f6f8ff] text-slate-900
                  <% if (thread) { %>flex<% } else { %>hidden md:flex<% } %>">

      <!-- mobile header -->
      <header class="md:hidden flex items-center gap-3 px-3 py-2 bg-white border-b border-[#e4e8ff]">
        <button type="button" onclick="window.location.href='/chat'"
          class="p-2 rounded-full hover:bg-[#f6f8ff] border border-[#e4e8ff]">
          ‚Üê
        </button>
        <img src="<%= otherUser.avatar || '/images/default-user.png' %>"
          class="w-8 h-8 rounded-full object-cover border border-[#e4e8ff]" />
        <div class="min-w-0">
          <p class="font-semibold text-sm truncate">
            <%= otherUser.name %>
          </p>
          <p class="text-[11px] text-slate-500 truncate">
            <span id="typing-status-mobile" class="text-blue-500 font-medium hidden"></span>
            <span class="default-status-mobile">Chat</span>
          </p>
        </div>
      </header>

      <!-- desktop header -->
      <header class="hidden md:flex items-center gap-3 px-4 py-3 bg-white border-b border-[#e4e8ff]">
        <img src="<%= otherUser.avatar || '/images/default-user.png' %>"
          class="w-9 h-9 rounded-full object-cover border border-[#e4e8ff]" />
        <div class="min-w-0">
          <p class="font-bold text-sm truncate">
            <%= otherUser.name %>
          </p>
          <p class="text-[11px] text-slate-500 truncate">
            <span id="typing-status" class="text-blue-500 font-medium hidden"></span>
            <span class="default-status">Chat</span>
          </p>
        </div>
      </header>

      <!-- messages -->
      <div id="messages" class="flex-1 overflow-y-auto px-3 py-4 space-y-2">
        <% messages.forEach(m=> { %>
          <% const mine=m.senderId._id.toString()===user._id.toString(); const otherId=otherUser?._id?.toString(); const
            delivered=otherId && m.deliveredTo?.some(x=> x.toString() === otherId);
            const seen = otherId && m.readBy?.some(x => x.toString() === otherId);
            %>
            <div class="flex <%= mine ? 'justify-end' : 'justify-start' %>">
              <div class="max-w-[78%] px-3 py-2 rounded-2xl text-sm shadow-sm
                 <%= mine
                   ? 'bg-gradient-to-br from-[#2b59ff] to-[#7c3aed] text-white rounded-br-md'
                   : 'bg-white text-slate-800 border border-[#e4e8ff] rounded-bl-md'
                 %>">
                <% if (m.fileUrl) { %>
                  <div class="flex items-center gap-2 mb-1">
                    <span
                      class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-[#eef2ff] text-xs border border-[#e4e8ff]">
                      üìé
                    </span>
                    <a href="<%= m.fileUrl %>" target="_blank"
                      class="<%= mine ? 'text-white' : 'text-[#2b59ff]' %> underline text-xs break-all">
                      <%= m.fileName || 'Document' %>
                    </a>
                  </div>
                  <% } %>
                    <% if (m.message) { %>
                      <div class="break-words">
                        <%= m.message %>
                      </div>
                      <% } %>
                        <% if (mine) { %>
                          <div class="flex items-center justify-end gap-1 mt-1 text-[12px]">
                            <% if (seen) { %>
                              <span class="tick-status font-bold" style="color: #10B981"
                                data-msg-id="<%= m._id %>">‚úì‚úì</span>
                              <% } else if (delivered) { %>
                                <span class="tick-status font-semibold" style="color: #E5E7EB"
                                  data-msg-id="<%= m._id %>">‚úì‚úì</span>
                                <% } else { %>
                                  <span class="tick-status" style="color: #D1D5DB" data-msg-id="<%= m._id %>">‚úì</span>
                                  <% } %>
                          </div>
                          <% } %>
              </div>
            </div>
            <% }); %>
      </div>

      <!-- input row -->
      <form id="chat-form" action="/chat/thread/<%= thread._id %>/send" method="POST" enctype="multipart/form-data"
        class="flex items-center gap-2 px-3 py-2 bg-white border-t border-[#e4e8ff]">
        <input id="file-input" type="file" name="file" class="hidden">
        <button type="button" id="attach-btn"
          class="p-2 rounded-full bg-[#f6f8ff] border border-[#e4e8ff] text-lg leading-none hover:bg-white">
          üìé
        </button>
        <input name="message" autocomplete="off" placeholder="Type a message"
          class="flex-1 px-4 py-2 rounded-full text-sm bg-[#f6f8ff] border border-[#e4e8ff] text-slate-800 outline-none focus:ring-2 focus:ring-[#2b59ff30]">
        <button class="px-4 py-2 rounded-full bg-[#2b59ff] text-white text-sm font-semibold hover:bg-[#2349d6]">
          Send
        </button>
      </form>
    </section>
    <% } else { %>
      <section class="flex-1 hidden md:flex items-center justify-center text-slate-400">
        Select a chat to start messaging
      </section>
      <% } %>

</main>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  const THREADID = '<% if (thread) { %><%= thread._id %><% } %>';
  const USERID = '<%= user._id %>';
  const OTHERUSERID = '<% if (thread && otherUser) { %><%= otherUser._id %><% } %>';
  const HASTHREAD = !!<%= thread ? 'true' : 'false' %>;

  const form = document.getElementById('chat-form');
  const input = form?.querySelector('input[name="message"]');
  const box = document.getElementById('messages');
  const fileInput = document.getElementById('file-input');
  const attachBtn = document.getElementById('attach-btn');

  function findRow(threadId) {
    return document.querySelector(`.thread-row[data-thread-id="${threadId}"]`);
  }

  function setLastMessage(threadId, text) {
    const row = findRow(threadId);
    const lastMsgEl = row?.querySelector('.last-message');
    if (lastMsgEl) lastMsgEl.textContent = text || '';
  }

  function clearUnread(threadId) {
    const row = findRow(threadId);
    const unreadEl = row?.querySelector('.unread-badge');
    if (!unreadEl) return;
    unreadEl.classList.add('hidden');
    unreadEl.textContent = '';
  }

  function incrementUnread(threadId) {
    const row = findRow(threadId);
    const unreadEl = row?.querySelector('.unread-badge');
    if (!unreadEl) return;
    const current = parseInt(unreadEl.textContent) || 0;
    unreadEl.textContent = current + 1;
    unreadEl.classList.remove('hidden');
  }

  function scrollToBottom() {
    if (box) box.scrollTop = box.scrollHeight;
  }

  function appendMessage(msg, isMine) {
    if (!box) return;
    const bubble = document.createElement('div');
    bubble.className = `flex ${isMine ? 'justify-end' : 'justify-start'}`;

    const content = document.createElement('div');
    content.className = `max-w-[78%] px-3 py-2 rounded-2xl text-sm shadow-sm ${isMine
      ? 'bg-gradient-to-br from-[#2b59ff] to-[#7c3aed] text-white rounded-br-md'
      : 'bg-white text-slate-800 border border-[#e4e8ff] rounded-bl-md'
      }`;

    if (msg.fileUrl) {
      const fileDiv = document.createElement('div');
      fileDiv.className = 'flex items-center gap-2 mb-1';
      fileDiv.innerHTML = `
        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-[#eef2ff] text-xs border border-[#e4e8ff]">üìé</span>
        <a href="${msg.fileUrl}" target="_blank" class="${isMine ? 'text-white' : 'text-[#2b59ff]'} underline text-xs break-all">
          ${msg.fileName || 'Document'}
        </a>
      `;
      content.appendChild(fileDiv);
    }

    if (msg.message) {
      const textDiv = document.createElement('div');
      textDiv.className = 'break-words';
      textDiv.textContent = msg.message;
      content.appendChild(textDiv);
    }

    if (isMine) {
      const statusDiv = document.createElement('div');
      statusDiv.className = 'flex items-center justify-end gap-1 mt-1 text-[12px]';
      statusDiv.innerHTML = `<span class="tick-status" style="color: #D1D5DB" data-msg-id="${msg._id}">‚úì</span>`;
      content.appendChild(statusDiv);
    }

    bubble.appendChild(content);
    box.appendChild(bubble);
    scrollToBottom();
  }

  // Socket events
  // Socket events

  // Join user's personal room for badge updates
  socket.emit('joinUser', USERID);

  if (HASTHREAD) {
    socket.emit('join_chat', { threadId: THREADID });
    clearUnread(THREADID);
    scrollToBottom();
  }

  // Handle new messages
  socket.on('new_message', (msg) => {
    // BUG #5 FIX: Silent echo suppression for sender (File uploads)
    if (msg._silentFor && msg._silentFor === USERID) {
      console.log('Suppressing silent echo message');
      return;
    }

    // BUG #5 FIX: Fix senderId check (object vs string)
    const senderIdStr = typeof msg.senderId === 'object' ? msg.senderId._id : msg.senderId;
    const isMine = senderIdStr.toString() === USERID;

    // BUG #2 FIX: Fix ThreadId comparison (ObjectId vs String)
    // Check if message belongs to current thread
    const msgThreadId = typeof msg.threadId === 'object' ? msg.threadId._id : msg.threadId;
    if (!HASTHREAD || msgThreadId.toString() !== THREADID) {
      setLastMessage(msgThreadId.toString(), msg.message || msg.fileName || 'Attachment');
      if (!isMine) {
        incrementUnread(msgThreadId.toString());
      }
      return;
    }

    appendMessage(msg, isMine);
    setLastMessage(THREADID, msg.message || msg.fileName || 'Attachment');

    if (!isMine) {
      // Mark read immediately if window is focused, else logic handled elsewhere? 
      // For now, simpler: mark read if open.
      socket.emit('mark_read', { threadId: THREADID });
    }
  });

  // Handle inbox messages (for threads not currently open)
  socket.on('notification', (data) => {
    // BUG: Ensure we don't double count if we just handled it in new_message
    // Logic: new_message handles current thread + sidebar update.
    // notification handles ONLY sidebar update for OTHERS.
    // But server only sends notification to those NOT in room.
    // So this is safe.
    console.log('Notification received:', data);

    if (data.type === 'message') {
      const tId = typeof data.threadId === 'object' ? data.threadId._id : data.threadId;
      if (tId.toString() !== THREADID) {
        incrementUnread(tId.toString());
        setLastMessage(tId.toString(), data.message);
      }
    }
  });

  // Handle messages seen
  socket.on('messages_seen', (data) => {
    if (data.threadId !== THREADID) return;
    if (data.seenBy === OTHERUSERID) {
      document.querySelectorAll('.tick-status').forEach((el) => {
        el.style.color = '#10B981';
        el.textContent = '‚úì‚úì';
        el.classList.remove('font-semibold');
        el.classList.add('font-bold');
      });
    }
  });

  // Handle messages delivered
  socket.on('messages_delivered', (data) => {
    if (data.threadId !== THREADID) return;
    if (data.deliveredBy === OTHERUSERID) {
      document.querySelectorAll('.tick-status').forEach((el) => {
        if (!el.classList.contains('font-bold')) {
          el.style.color = '#E5E7EB';
          el.textContent = '‚úì‚úì';
          el.classList.add('font-semibold');
        }
      });
    }
  });

  // Typing indicators
  let typingTimeout;
  const typingStatusEl = document.getElementById('typing-status'); // need to add this element in HTML

  if (input) {
    input.addEventListener('input', () => {
      socket.emit('typing', { threadId: THREADID });
      clearTimeout(typingTimeout);
      typingTimeout = setTimeout(() => {
        socket.emit('stop_typing', { threadId: THREADID });
      }, 1000);
    });
  }

  socket.on('typing', (data) => {
    if (data.userId === OTHERUSERID) {
      if (typingStatusEl) {
        typingStatusEl.textContent = 'typing...';
        typingStatusEl.classList.remove('hidden');
      }
    }
  });

  socket.on('stop_typing', (data) => {
    if (data.userId === OTHERUSERID) {
      if (typingStatusEl) {
        typingStatusEl.classList.add('hidden');
        typingStatusEl.textContent = '';
      }
    }
  });

  // Form submit handler
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const text = input.value.trim();
      if (!text) return;

      socket.emit('send_message', {
        threadId: THREADID,
        message: text,
      });

      input.value = '';
    });
  }

  // File upload
  if (attachBtn && fileInput) {
    attachBtn.addEventListener('click', () => fileInput.click());
    fileInput.addEventListener('change', (e) => {
      if (e.target.files.length > 0) {
        form.action = `/chat/thread/${THREADID}/upload`;
        form.submit();
      }
    });
  }
</script>

<!-- Update chat badge when thread is opened -->
<% if (thread) { %>
  <script>
    // Wait for backend to process markThreadRead, then update badge
    setTimeout(() => {
      if (typeof window.loadUnreadMessageCount === 'function') {
        window.loadUnreadMessageCount();
        console.log('üîÑ Chat badge refreshed after opening thread');
      }
    }, 500);
  </script>
  <% } %>