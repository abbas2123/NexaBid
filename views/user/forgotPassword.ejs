<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title>
    <%= title || "Forgot Password - NexaBid" %>
  </title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>

  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            primary: '#0A78E0',
            'background-light': '#FFFFFF',
            'background-dark': '#111827',
          },
          fontFamily: {
            display: ['Inter', 'sans-serif'],
          },
        },
      },
    };
  </script>

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body class="bg-background-light dark:bg-background-dark font-display">
  <div class="flex flex-col min-h-screen">
    <!-- NAVBAR -->
    <header class="bg-background-light dark:bg-background-dark border-b border-gray-200 dark:border-gray-700">
      <nav class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
        <a class="text-2xl font-bold text-gray-900 dark:text-white" href="/">NexaBid</a>

        <!-- Hamburger Button -->
        <button id="menuToggle" class="md:hidden text-2xl text-gray-700 dark:text-gray-300">
          â˜°
        </button>

        <!-- Desktop Menu -->
        <div class="hidden md:flex items-center space-x-8">
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary" href="/">Home</a>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary" href="/about">About</a>
          <a class="text-gray-600 dark:text-gray-300 hover:text-primary" href="/contact">Contact</a>

          <a class="px-4 py-2 bg-gray-100 dark:bg-gray-800 text-sm font-medium rounded-md text-gray-800 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700"
            href="/auth/login">
            Sign In
          </a>
        </div>
      </nav>

      <!-- Mobile Menu -->
      <div id="mobileMenu" class="hidden md:hidden text-center px-4 py-4 space-y-3 bg-gray-100 dark:bg-gray-800">
        <a class="block text-gray-600 dark:text-gray-300 hover:text-primary" href="/">Home</a>
        <a class="block text-gray-600 dark:text-gray-300 hover:text-primary" href="/about">About</a>
        <a class="block text-gray-600 dark:text-gray-300 hover:text-primary" href="/contact">Contact</a>

        <a class="block py-2 bg-primary text-white rounded-md hover:bg-blue-700" href="/auth/login">Sign In</a>
      </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-grow flex items-center justify-center px-6 py-10">
      <div class="max-w-md w-full text-center">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Forgot your password?
        </h1>

        <p class="text-gray-600 dark:text-gray-400 mb-8">
          Enter your email address and we'll send you an OTP to reset your password.
        </p>

        <!-- FORM -->
        <form id="forgotForm" class="space-y-6 text-left">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              Email
            </label>

            <input id="email" name="email" type="email" placeholder="Enter your email"
              class="block w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md placeholder-gray-400 dark:placeholder-gray-500 bg-background-light dark:bg-gray-800 text-gray-900 dark:text-white shadow-sm focus:ring-primary focus:border-primary" />
          </div>

          <div>
            <button type="submit"
              class="w-full flex justify-center py-3 px-4 rounded-md text-sm font-medium text-white bg-primary hover:bg-blue-700 shadow-sm">
              Send OTP
            </button>
          </div>
        </form>
      </div>
    </main>
  </div>

  <!-- SweetAlert -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    // Mobile Menu Toggle
    document.getElementById('menuToggle').addEventListener('click', () => {
      document.getElementById('mobileMenu').classList.toggle('hidden');
    });

    // Forgot Password Submit
    document.getElementById('forgotForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = document.getElementById('email').value.trim();
      if (!email) {
        return Swal.fire('Error', 'Please enter your email', 'error');
      }

      try {
        const res = await fetch('/auth/forgot-password', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          },
          body: JSON.stringify({ email }),
        });

        const data = await res.json();

        if (!data.success) {
          return Swal.fire('Failed!', data.message, 'error');
        }

        Swal.fire('OTP Sent!', 'Check your email', 'success');

        setTimeout(() => {
          window.location.href = `/auth/forgot-otp?userId=${data.userId}&mode=forgot`;
        }, 1200);
      } catch (err) {
        Swal.fire('Server Error', 'Try again later', 'error');
      }
    });
  </script>
</body>

</html>