<div
    class="relative flex h-auto min-h-screen w-full flex-col overflow-x-hidden bg-background-light dark:bg-background-dark">
    <main class="flex-1 w-full max-w-[1200px] mx-auto px-4 md:px-8 py-8 md:py-12">
        <!-- Breadcrumbs -->
        <nav class="flex items-center gap-2 text-sm mb-6 flex-wrap">
            <a href="/admin/dashboard" class="text-[#616f89] dark:text-gray-400 hover:text-primary transition-colors">
                Home
            </a>
            <span class="text-[#616f89] dark:text-gray-500">/</span>
            <a href="/admin/report-management"
                class="text-[#616f89] dark:text-gray-400 hover:text-primary transition-colors">
                Admin Reports
            </a>
            <span class="text-[#616f89] dark:text-gray-500">/</span>
            <span class="font-medium text-[#111318] dark:text-white">Payment Audit</span>
        </nav>

        <!-- Header -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-10">
            <div>
                <h1 class="text-3xl md:text-4xl font-black text-[#111318] dark:text-white mb-2">
                    Payment Audit Trail
                </h1>
                <p class="text-[#616f89] dark:text-gray-400">
                    Complete history of all financial transactions across the platform.
                </p>
            </div>
            <div>
                <!-- Potential export button here -->
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
            <div class="bg-white dark:bg-[#1A2230] border border-[#e2e8f0] dark:border-gray-700 rounded-xl p-6">
                <p class="text-sm text-[#616f89] dark:text-gray-400">Total Volume</p>
                <p class="text-2xl font-bold text-[#111318] dark:text-white mt-1">₹<%= (stats.volume ||
                        0).toLocaleString() %>
                </p>
            </div>
            <div class="bg-white dark:bg-[#1A2230] border border-[#e2e8f0] dark:border-gray-700 rounded-xl p-6">
                <p class="text-sm text-[#616f89] dark:text-gray-400">Successful</p>
                <p class="text-2xl font-bold text-emerald-600 dark:text-emerald-400 mt-1">
                    <%= stats.successful || 0 %>
                </p>
            </div>
            <div class="bg-white dark:bg-[#1A2230] border border-[#e2e8f0] dark:border-gray-700 rounded-xl p-6">
                <p class="text-sm text-[#616f89] dark:text-gray-400">Failed</p>
                <p class="text-2xl font-bold text-red-600 dark:text-red-400 mt-1">
                    <%= stats.failed || 0 %>
                </p>
            </div>
            <div class="bg-white dark:bg-[#1A2230] border border-[#e2e8f0] dark:border-gray-700 rounded-xl p-6">
                <p class="text-sm text-[#616f89] dark:text-gray-400">Refunded</p>
                <p class="text-2xl font-bold text-purple-600 dark:text-purple-400 mt-1">
                    <%= stats.refunded || 0 %>
                </p>
            </div>
        </div>

        <!-- Filters -->
        <div class="bg-white dark:bg-[#1A2230] border border-[#e2e8f0] dark:border-gray-700 rounded-xl p-6 mb-8">
            <form method="GET" action="/admin/reports/payment-audit"
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium text-[#111318] dark:text-white mb-2">Status</label>
                    <select name="status"
                        class="w-full px-3 py-2 border border-[#e2e8f0] dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-[#111318] dark:text-white">
                        <option value="">All Status</option>
                        <option value="success" <%=filters.status==='success' ? 'selected' : '' %>>Success</option>
                        <option value="failed" <%=filters.status==='failed' ? 'selected' : '' %>>Failed</option>
                        <option value="refunded" <%=filters.status==='refunded' ? 'selected' : '' %>>Refunded</option>
                        <option value="pending" <%=filters.status==='pending' ? 'selected' : '' %>>Pending</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-[#111318] dark:text-white mb-2">Type</label>
                    <select name="type"
                        class="w-full px-3 py-2 border border-[#e2e8f0] dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-[#111318] dark:text-white">
                        <option value="">All Types</option>
                        <option value="participation_fee" <%=filters.type==='participation_fee' ? 'selected' : '' %>
                            >Participation Fee</option>
                        <option value="emd" <%=filters.type==='emd' ? 'selected' : '' %>>EMD</option>
                        <option value="doc_fee" <%=filters.type==='doc_fee' ? 'selected' : '' %>>Doc Fee</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-[#111318] dark:text-white mb-2">Search</label>
                    <input type="text" name="search" value="<%= filters.search || '' %>"
                        placeholder="Order ID / Payment ID"
                        class="w-full px-3 py-2 border border-[#e2e8f0] dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-[#111318] dark:text-white">
                </div>
                <div class="lg:col-span-2 flex items-end gap-2">
                    <button type="submit"
                        class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">Apply
                        Filters</button>
                    <a href="/admin/reports/payment-audit"
                        class="px-6 py-2 bg-gray-200 dark:bg-gray-700 text-[#111318] dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition">Clear</a>
                </div>
            </form>
        </div>

        <!-- Data Table -->
        <div
            class="bg-white dark:bg-[#1A2230] border border-[#e2e8f0] dark:border-gray-700 rounded-xl overflow-hidden shadow-sm">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 dark:bg-gray-800 border-b border-[#e2e8f0] dark:border-gray-700">
                        <tr>
                            <th
                                class="px-6 py-3 text-left text-xs font-semibold text-[#616f89] dark:text-gray-400 uppercase tracking-wider">
                                Date</th>
                            <th
                                class="px-6 py-3 text-left text-xs font-semibold text-[#616f89] dark:text-gray-400 uppercase tracking-wider">
                                Order / Payment ID</th>
                            <th
                                class="px-6 py-3 text-left text-xs font-semibold text-[#616f89] dark:text-gray-400 uppercase tracking-wider">
                                User</th>
                            <th
                                class="px-6 py-3 text-left text-xs font-semibold text-[#616f89] dark:text-gray-400 uppercase tracking-wider">
                                Type / Context</th>
                            <th
                                class="px-6 py-3 text-left text-xs font-semibold text-[#616f89] dark:text-gray-400 uppercase tracking-wider">
                                Amount</th>
                            <th
                                class="px-6 py-3 text-left text-xs font-semibold text-[#616f89] dark:text-gray-400 uppercase tracking-wider">
                                Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#e2e8f0] dark:divide-gray-700">
                        <% if (payments && payments.length> 0) { %>
                            <% payments.forEach(p=> { %>
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-[#111318] dark:text-white">
                                        <%= new Date(p.createdAt).toLocaleDateString() %><br>
                                            <span class="text-xs text-gray-500">
                                                <%= new Date(p.createdAt).toLocaleTimeString() %>
                                            </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm font-medium text-[#111318] dark:text-white">
                                            <%= p.orderNumber || 'N/A' %>
                                        </div>
                                        <div class="text-xs text-gray-500 font-mono">
                                            <%= p.gatewayPaymentId || '-' %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-[#111318] dark:text-white">
                                        <% if (p.userId) { %>
                                            <div class="font-medium">
                                                <%= p.userId.name %>
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                <%= p.userId.email %>
                                            </div>
                                            <% } else { %>
                                                <span class="text-gray-500 italic">Deleted User</span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 text-sm text-[#111318] dark:text-white">
                                        <span class="capitalize block font-medium">
                                            <%= p.type.replace('_', ' ' ) %>
                                        </span>
                                        <span class="text-xs text-gray-500 capitalize">
                                            <%= p.contextType %>
                                        </span>
                                    </td>
                                    <td
                                        class="px-6 py-4 whitespace-nowrap text-sm font-bold text-[#111318] dark:text-white">
                                        ₹<%= p.amount.toLocaleString() %>
                                            <% if (p.refundAmount> 0) { %>
                                                <div class="text-xs text-red-500">Ref: ₹<%=
                                                        p.refundAmount.toLocaleString() %>
                                                </div>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span
                                            class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                        <%= p.status === 'success' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300' : 
                                            p.status === 'failed' ? 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300' :
                                            p.status === 'refunded' ? 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300' :
                                            'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300' %>">
                                            <%= p.status.charAt(0).toUpperCase() + p.status.slice(1) %>
                                        </span>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6"
                                                class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                                                No payment records found.
                                            </td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <!-- Pagination -->
            <% const queryParams=`&status=${filters.status || '' }&type=${filters.type || '' }&search=${filters.search
                || '' }`; const paginationData={ currentPage: typeof currentPaginationPage !=='undefined' ?
                currentPaginationPage : 1, totalPages: typeof totalPages !=='undefined' ? totalPages : 1, hasPrevPage:
                (typeof currentPaginationPage !=='undefined' ? currentPaginationPage : 1)> 1,
                hasNextPage: (typeof currentPaginationPage !== 'undefined' ? currentPaginationPage : 1) < (typeof
                    totalPages !=='undefined' ? totalPages : 1) }; %>
                    <%- include('../../partials/admin/pagination.ejs', { pagination: paginationData, queryParams:
                        queryParams }) %>
        </div>
    </main>
</div>

<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700;800&display=swap" rel="stylesheet" />
<style>
    body {
        font-family: 'Manrope', sans-serif;
    }
</style>