<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Live Search Functionality
    const searchInput = document.getElementById('reportSearch');
    const reportCards = document.querySelectorAll('.report-card');
    const reportGrid = document.getElementById('reportGrid');
    const emptyState = document.getElementById('emptyState');

    if (!searchInput) return;

    searchInput.addEventListener('input', function () {
      const searchTerm = this.value.toLowerCase().trim();
      let visibleCount = 0;

      reportCards.forEach((card) => {
        const searchTerms = card.getAttribute('data-search-terms') || '';
        const title = card.querySelector('h3')
          ? card.querySelector('h3').textContent.toLowerCase()
          : '';
        const description = card.querySelector('p')
          ? card.querySelector('p').textContent.toLowerCase()
          : '';

        const matches =
          searchTerms.toLowerCase().includes(searchTerm) ||
          title.includes(searchTerm) ||
          description.includes(searchTerm);

        if (matches || searchTerm === '') {
          card.classList.remove('hidden');
          card.classList.add('flex');
          visibleCount++;
        } else {
          card.classList.remove('flex');
          card.classList.add('hidden');
        }
      });

      // Show/hide empty state
      if (visibleCount === 0 && searchTerm !== '') {
        reportGrid.classList.add('hidden');
        emptyState.classList.remove('hidden');
      } else {
        reportGrid.classList.remove('hidden');
        reportGrid.classList.add('grid');
        emptyState.classList.add('hidden');
      }
    });

    // Keyboard shortcut (Ctrl/Cmd + K to focus search)
    document.addEventListener('keydown', function (e) {
      if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
        e.preventDefault();
        searchInput.focus();
      }
    });
  });

  // Clear search function
  function clearSearch() {
    const searchInput = document.getElementById('reportSearch');
    if (searchInput) {
      searchInput.value = '';
      searchInput.dispatchEvent(new Event('input'));
      searchInput.focus();
    }
  }
</script>

<style>
  body {
    font-family: 'Manrope', sans-serif;
  }

  /* Smooth transitions */
  .report-card {
    transition: all 0.3s ease;
  }

  /* Search input focus effect */
  #reportSearch:focus {
    transform: translateY(-2px);
  }

  /* Responsive grid adjustments */
  @media (max-width: 768px) {
    .report-card {
      padding: 1.25rem;
    }
  }

  /* Empty state animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #emptyState:not(.hidden) {
    animation: fadeIn 0.3s ease;
  }
</style>