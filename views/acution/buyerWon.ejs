<main class="flex-1 flex justify-center py-8 md:py-12 px-4 md:px-6">
  <div class="flex flex-col max-w-[1120px] w-full gap-8 md:gap-12">

    <!-- SUCCESS HEADER -->
    <div class="flex flex-col items-center text-center gap-6">
      <div class="rounded-full bg-green-100 p-4">
        <span class="material-symbols-outlined text-green-600 text-5xl md:text-6xl">
          celebration
        </span>
      </div>

      <div class="max-w-[720px]">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-black">
          Congratulations! You won the auction üéâ
        </h1>

        <p class="mt-3 text-lg md:text-xl font-medium text-gray-600">
          Your bid of
          <span class="font-bold text-green-600">
            ‚Çπ <%= winningBid.amount.toLocaleString('en-IN') %>
          </span>
          was the highest.
        </p>
      </div>
    </div>

    <!-- GRID -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 items-start">

      <!-- PROPERTY CARD -->
      <div class="lg:col-span-8">
        <div class="bg-white rounded-2xl border shadow-sm p-4 md:p-6 flex flex-col md:flex-row gap-6">

          <!-- IMAGE -->
          <div
            class="w-full md:w-1/2 aspect-video bg-cover bg-center rounded-xl relative"
            style="background-image:url('<%= property.media?.[0]?.url || '/images/no-image.png' %>')"
          >
            <span class="absolute top-3 left-3 bg-green-600 text-white text-xs font-bold px-3 py-1 rounded-full">
              Sold to You
            </span>
          </div>

          <!-- DETAILS -->
          <div class="flex flex-col justify-between flex-1 gap-4">

            <div>
              <p class="text-sm text-gray-500">Winning Bid</p>
              <p class="text-3xl font-extrabold text-green-600">
                ‚Çπ <%= winningBid.amount.toLocaleString('en-IN') %>
              </p>
            </div>

            <hr />

            <div>
              <h3 class="text-xl md:text-2xl font-bold mb-1">
                <%= property.title %>
              </h3>

              <p class="text-gray-500 flex items-start gap-1">
                <span class="material-symbols-outlined text-lg">location_on</span>
                <%= property.address %>
              </p>
            </div>

            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 rounded text-sm">
                üõè <%= property.bedrooms %> Beds
              </span>
              <span class="px-3 py-1 bg-gray-100 rounded text-sm">
                üõÅ <%= property.bathrooms %> Baths
              </span>
              <span class="px-3 py-1 bg-gray-100 rounded text-sm">
                üìê <%= property.area %> sqft
              </span>
            </div>

            <a
              href="/properties/<%= property._id %>"
              class="mt-2 inline-flex items-center gap-2 text-sm font-semibold text-primary hover:underline"
            >
              <span class="material-symbols-outlined text-base">visibility</span>
              View Property Details
            </a>

          </div>
        </div>
      </div>

      <!-- SELLER INFO -->
      <div class="lg:col-span-4 flex flex-col gap-6">

        <div class="bg-white rounded-2xl border shadow-sm p-6">
          <div class="flex items-center gap-4 mb-6">

            <img
              src="<%= seller.avatar || '/images/default-user.png' %>"
              class="w-16 h-16 rounded-full border"
            />

            <div>
              <p class="text-xs text-gray-500 uppercase font-bold">Seller</p>
              <h3 class="text-lg font-bold"><%= seller.name %></h3>
              <p class="text-green-600 text-sm font-medium flex items-center gap-1">
                <span class="material-symbols-outlined text-sm">verified</span>
                Verified Seller
              </p>
            </div>
          </div>

          <div class="space-y-3 text-sm text-gray-600">
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined">mail</span>
              <%= seller.email %>
            </div>

            <% if (seller.phone) { %>
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined">call</span>
              <%= seller.phone %>
            </div>
            <% } %>
          </div>

          <a
            href="/chat/<%= seller._id %>"
            class="mt-6 block w-full text-center bg-green-600 hover:bg-green-700 text-white font-bold py-3 rounded-xl"
          >
            Start Chat with Seller
          </a>

          <p class="mt-2 text-xs text-center text-gray-500">
            Finalize payment and handover directly with the seller.
          </p>
        </div>

        <!-- NOTE -->
        <div class="bg-gray-50 border border-dashed rounded-xl p-4 text-sm text-gray-600 flex gap-2">
          <span class="material-symbols-outlined">info</span>
          <p>
            <strong>Note:</strong> NexaBid only facilitates auctions.
            Payments and legal formalities are handled privately.
          </p>
        </div>

      </div>
    </div>
  </div>
</main>