<body class="font-display bg-background-light dark:bg-background-dark">

    <div class="flex min-h-screen w-full flex-col">

        <!-- MAIN CONTENT -->
        <main class="flex-1 px-4 sm:px-6 md:px-10 lg:px-20 xl:px-40 py-10">
            <div class="max-w-4xl mx-auto">

                <!-- HEADER -->
                <div class="flex justify-between items-center mb-10">
                    <h1 class="text-3xl font-bold text-[#111418] dark:text-white">
                        Purchase Order <%= po.poNumber %>
                    </h1>

                    <div class="mt-8 flex justify-end">
                        <% if (po.pdfFile) { %>
                            <a href="/secure-files/<%= po.pdfFile._id %>"
                                class="px-4 py-2 rounded-lg bg-primary text-white shadow hover:bg-primary/90"
                                target="_blank">
                                Download PDF
                            </a>
                            <% } %>
                    </div>
                </div>

                <!-- PO STATUS -->
                <div class="mb-6">
                    <% if(po.status==="generated" ){ %>
                        <span class="px-4 py-2 text-sm rounded-lg bg-blue-100 text-blue-700">
                            Generated
                        </span>
                        <% } %>
                </div>

                <!-- PO DETAILS CARD -->
                <div class="bg-white dark:bg-background-dark p-6 rounded-xl shadow border mb-6">
                    <h2 class="text-xl font-semibold mb-4">PO Details</h2>

                    <p class="text-gray-600 dark:text-gray-400">PO Number:</p>
                    <p class="font-medium mb-3">
                        <%= po.poNumber %>
                    </p>

                    <p class="text-gray-600 dark:text-gray-400">Issue Date:</p>
                    <p class="font-medium mb-3">
                        <%= po.createdAt.toDateString() %>
                    </p>
                </div>

                <!-- Tender Information -->
                <div class="bg-white dark:bg-background-dark p-6 rounded-xl shadow border mb-6">
                    <h2 class="text-xl font-semibold mb-4">Tender Information</h2>

                    <p class="text-gray-600 dark:text-gray-400">Title:</p>
                    <p class="font-medium mb-3">
                        <%= tender.title %>
                    </p>
                </div>

                <!-- Vendor Details -->
                <div class="bg-white dark:bg-background-dark p-6 rounded-xl shadow border mb-6">
                    <h2 class="text-xl font-semibold mb-4">Vendor Details</h2>

                    <p class="text-gray-600 dark:text-gray-400">Name:</p>
                    <p class="font-medium mb-3">
                        <%= vendor.name %>
                    </p>

                    <p class="text-gray-600 dark:text-gray-400">Email:</p>
                    <p class="font-medium mb-3">
                        <%= vendor.email %>
                    </p>
                </div>

                <!-- Contract Details -->
                <div class="bg-white dark:bg-background-dark p-6 rounded-xl shadow border mb-6">
                    <h2 class="text-xl font-semibold mb-4">Contract Details</h2>

                    <p class="text-gray-600 dark:text-gray-400">Amount:</p>
                    <p class="font-medium mb-3">₹<%= po.amount %>
                    </p>

                    <p class="text-gray-600 dark:text-gray-400">Start Date:</p>
                    <p class="font-medium mb-3">
                        <%= po.startDate ? new Date(po.startDate).toDateString() : "N/A" %>
                    </p>

                    <p class="text-gray-600 dark:text-gray-400">End Date:</p>
                    <p class="font-medium mb-3">
                        <%= po.endDate ? new Date(po.endDate).toDateString() : "N/A" %>
                    </p>
                </div>

                <!-- TERMS -->
                <div class="bg-white dark:bg-background-dark p-6 rounded-xl shadow border mb-10">
                    <h2 class="text-xl font-semibold mb-4">Terms & Conditions</h2>

                    <p class="text-gray-700 dark:text-gray-300 whitespace-pre-line break-words">
                        <%= po.terms %>
                    </p>
                </div>

                <a href="/publisher/tender/<%= tender._id %>/post-award" class="text-primary font-semibold underline">
                    ← Back to Post Award
                </a>

            </div>
        </main>
    </div>

</body>