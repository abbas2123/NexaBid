<aside id="sidebar"
  class="fixed md:static left-0 top-0 h-screen w-64 bg-white border-r border-gray-200
         flex flex-col transition-transform duration-300 transform -translate-x-full 
         md:translate-x-0 z-50">

  <!-- TOP SECTION -->
  <div class="flex flex-col flex-grow">

    <h1 class="text-xl font-bold mb-8 px-5">Admin Panel</h1>

    <nav class="flex flex-col flex-grow justify-between px-5">

      <!-- MENU ITEMS -->
      <div class="flex flex-col space-y-6">

        <a class="sidebar-item <%= currentPage === 'dashboard' ? 'active' : '' %>" 
           href="/admin/dashboard">
          Dashboard
        </a>

        <a class="sidebar-item <%= currentPage === 'user-management' ? 'active' : '' %>" 
           href="/admin/user-management">
          User Management
        </a>

        <a class="sidebar-item <%= currentPage === 'property-management' ? 'active' : '' %>" 
           href="/admin/property-management">
          Property Management
        </a>

        <a class="sidebar-item <%= currentPage === 'tender-management' ? 'active' : '' %>" 
           href="/admin/tender-management">
          Tender Management
        </a>

        <a class="sidebar-item <%= currentPage === 'vendor-applications' ? 'active' : '' %>" 
           href="/admin/vendor-management">
          Vendor Applications
        </a>

        <a class="sidebar-item <%= currentPage === 'contract-management' ? 'active' : '' %>" 
           href="/admin/contract-management">
          Contract Management
        </a>

        <a class="sidebar-item <%= currentPage === 'audit' ? 'active' : '' %>"
           href="/admin/audit">
          Audit Logs
        </a>

      </div>

      <!-- EMPTY FLEX BOX pushes logout down -->
      <div class="flex-grow"></div>

    </nav>
  </div>

  <!-- LOGOUT -->
  <div class="px-5 pb-5">
    <a href="/admin/logout" id="logoutBtn" 
       class="sidebar-item flex items-center gap-2 cursor-pointer">
      <span class="material-icons">logout</span> 
    </a>
  </div>

</aside>