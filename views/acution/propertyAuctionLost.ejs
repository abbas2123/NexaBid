<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8 flex items-center justify-center">
  <div class="max-w-4xl w-full">
    <!-- Main Card -->
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl overflow-hidden flex flex-col md:flex-row">
      <!-- Image Section (Left) -->
      <!-- Image Section (Left) -->
      <div class="md:w-1/2 relative h-64 md:h-auto">
        <img
          src="<%= property.media && property.media.length > 0 ? property.media[0].url : '/images/placeholder.jpg' %>"
          alt="<%= property.title %>" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
          <span
            class="px-4 py-2 bg-red-600 text-white text-sm font-bold uppercase tracking-wider rounded-full shadow-lg">
            Auction Ended
          </span>
        </div>
      </div>

      <!-- Content Section (Right) -->
      <div class="md:w-1/2 p-8 md:p-12 flex flex-col justify-center text-center md:text-left">
        <div class="mb-6">
          <h2 class="text-3xl font-extrabold text-gray-900 dark:text-white mb-2">
            Better Luck Next Time!
          </h2>
          <p class="text-gray-500 dark:text-gray-400">
            You didn't win this property, but there are more opportunities waiting for you.
          </p>
        </div>

        <!-- Property Snippet -->
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-8">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white truncate">
            <%= property.title %>
          </h3>
          <div class="flex justify-between mt-2 text-sm text-gray-600 dark:text-gray-300">
            <span>Winning Bid:</span>
            <span class="font-bold text-primary">â‚¹ <%= (property.currentHighestBid ||
                property.basePrice).toLocaleString('en-IN') %></span>
          </div>
        </div>

        <!-- Actions -->
        <div class="space-y-4">
          <a href="/properties"
            class="block w-full text-center px-6 py-3 bg-primary hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition duration-200">
            Explore more properties
          </a>
          <a href="/auth/dashboard"
            class="block w-full text-center px-6 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-200 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200">
            Return to Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>
</div>