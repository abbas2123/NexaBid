<h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
  Quick Actions
</h2>

<div class="space-y-4">

  <!-- Create Property -->
  <button onclick="window.location.href='/Properties/Create'"
    class="w-full bg-primary text-white font-semibold py-3 rounded-lg shadow-md hover:opacity-90 transition-opacity">
    Create Properties...
  </button>

  <!-- Explore Tenders -->
  <button onclick="window.location.href='/tenders'"
    class="w-full bg-primary text-white font-semibold py-3 rounded-lg shadow-md hover:opacity-90 transition-opacity">
    Explore Tenders
  </button>

  <% const role = user?.role || 'user'; %>
  <% const isVendor = user?.isVendor; %>

  <!-- Vendor Button -->
  <% if (role === "admin") { %>

    <button
      onclick="window.location.href='/admin/dashboard'"
      class="w-full bg-purple-600 text-white font-semibold py-3 rounded-lg shadow-md hover:bg-purple-700 transition-colors">
      Go to Admin Panel
    </button>

  <% } else if (user&&user?.role==="vendor") { %>

    <button
      disabled
      class="w-full bg-primary text-white font-semibold py-3 rounded-lg shadow-md hover:opacity-90 transition-opacity">
      Create Tender 
    </button>

  <% } else { %>

    <button
      onclick="window.location.href='/vendor/apply' "
      class="w-full bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 font-semibold py-3 rounded-lg shadow-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors">
      Become a Verified Vendor
    </button>

  <% } %>

</div>