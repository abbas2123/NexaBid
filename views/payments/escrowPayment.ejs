  <!-- Payment Handler -->
  <script>
    document.getElementById("payBtn").addEventListener("click", async function (e) {
      e.preventDefault();


      const btn = this;
      const originalHTML = btn.innerHTML;

      const method = document.querySelector(
        'input[name="payment_method"]:checked'
      )?.value;

      if (method === 'wallet') {
        const res = await fetch('/payments/wallet-pay', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            paymentId: "<%= payment._id %>",
            amount: currentPayAmount
          })
        });

        const data = await res.json();

        if (data.success) {
          window.location.href = data.redirect;
        } else {
          alert(data.message);
          btn.innerHTML = originalHTML;
          btn.disabled = false;
        }
        return; // ‚õî STOP Razorpay
      }



      // Show loading state
      btn.innerHTML = '<svg class="animate-spin h-6 w-6 mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
      btn.disabled = true;

      console.log("üí≥ Proceeding to payment...");
      console.log("üí∞ Final payment amount:", currentPayAmount);

      try {
        const res = await fetch("/payments/create-order", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            paymentId: "<%= payment._id %>",
            amount: currentPayAmount
          })
        });

        const data = await res.json();

        if (!data.success) {
          alert("Unable to start payment. Please try again.");
          btn.innerHTML = originalHTML;
          btn.disabled = false;
          return;
        }

        console.log("‚úÖ Razorpay order created:", data.orderId);

        const options = {
          key: "<%= razorpayKey %>",
          amount: data.amount,
          currency: "INR",
          name: "NexaBid",
          description: "Escrow Payment",
          order_id: data.orderId,

          prefill: {
            name: "<%= user?.name || '' %>",
            email: "<%= user?.email || '' %>",
            contact: "<%= user?.phone || '9999999999' %>"
          },

          handler: function (response) {
            console.log("‚úÖ Payment successful:", response);

            fetch("/payments/confirm", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                paymentId: "<%= payment._id %>",
                razorpay_payment_id: response.razorpay_payment_id,
                razorpay_order_id: response.razorpay_order_id,
                razorpay_signature: response.razorpay_signature
              })
            })
              .then(res => res.json())
              .then(data => {
                window.location.href = data.redirect || "/dashboard";
              })
              .catch(() => {
                window.location.href = "/payments/failure/<%= payment._id %>";
              });
          },

          modal: {
            ondismiss: function () {
              console.log("‚ùå Payment cancelled by user");
              btn.innerHTML = originalHTML;
              btn.disabled = false;
            }
          },

          theme: { color: "#2563eb" }
        };

        const rzp = new Razorpay(options);

        /* üî¥ VERY IMPORTANT ‚Äì HANDLE FAILURES */
        rzp.on("payment.failed", function (response) {
          console.log("‚ùå Razorpay failed", response.error);
          const reason = response.error ? response.error.description : 'Payment failed';
          window.location.href = `/payments/failure/<%= payment._id %>?reason=${encodeURIComponent(reason)}`;
        });

        /* USER CANCEL / CLOSE */
        options.modal = {
          ondismiss: function () {
            console.log("‚ùå Razorpay dismissed");
            window.location.href = "/payments/failure/<%= payment._id %>?reason=Cancelled by user";
          }
        };

        rzp.open();
      } catch (error) {
        console.error("‚ùå Payment error:", error);
        alert("Payment failed. Please try again.");
        btn.innerHTML = originalHTML;
        btn.disabled = false;
      }
    });

  </script>

