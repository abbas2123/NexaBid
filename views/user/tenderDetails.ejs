<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">

  <!-- TITLE -->
  <h1 class="text-3xl md:text-4xl font-bold tracking-tight text-gray-900 dark:text-white mb-8">
    <%= tender.title %>
  </h1>

  <!-- OVERVIEW -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Overview</h2>
    <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
      <%= tender.description || "No description available." %>
    </p>
  </section>

  <!-- ELIGIBILITY -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-6">Eligibility Criteria</h2>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-6 grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <p class="text-sm text-gray-500">Minimum Grade</p>
        <p class="text-base font-medium text-gray-900 dark:text-white mt-1">
          <%= tender.grade || "Not Specified" %>
        </p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Required Categories / Specializations</p>
        <p class="text-base font-medium text-gray-900 dark:text-white mt-1">
          <%= tender.category || "Not Specified" %>
        </p>
      </div>
    </div>
  </section>

  <!-- FINANCIAL DETAILS -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-6">Financial Details</h2>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-6 grid grid-cols-1 md:grid-cols-2 gap-8">

      <div>
        <p class="text-sm text-gray-500">EMD Amount</p>
        <p class="text-base font-medium mt-1">
          ₹ <%= tender.emdAmount ? tender.emdAmount.toLocaleString() : "N/A" %>
        </p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Document Fee</p>
        <p class="text-base font-medium mt-1">
          ₹ <%= tender.documentFee ? tender.documentFee.toLocaleString() : "N/A" %>
        </p>
      </div>

    </div>

  </section>

  <!-- IMPORTANT DATES -->
  <section class="mb-12">

    <h2 class="text-xl font-semibold mb-6">Important Dates & Timelines</h2>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-6 grid grid-cols-1 md:grid-cols-2 gap-8">

      <div>
        <p class="text-sm text-gray-500">Publish Date</p>
        <p class="text-base font-medium mt-1">
          <%= tender.createdAt ? new Date(tender.createdAt).toDateString() : "N/A" %>
        </p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Bid Start Date</p>
        <p class="text-base font-medium mt-1">
          <%= tender.bidStartAt ? new Date(tender.bidStartAt).toDateString() : "N/A" %>
        </p>
      </div>

    </div>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-6 mt-6 grid grid-cols-1 md:grid-cols-2 gap-8">

      <div>
        <p class="text-sm text-gray-500">Bid End Date</p>
        <p class="text-base font-medium mt-1">
          <%= tender.bidEndAt ? new Date(tender.bidEndAt).toDateString() : "N/A" %>
        </p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Technical Bid Open Date</p>
        <p class="text-base font-medium mt-1">
          <%= tender.techBidOpenAt ? new Date(tender.techBidOpenAt).toDateString() : "N/A" %>
        </p>
      </div>

    </div>

    <div class="border-t border-gray-200 dark:border-gray-700 pt-6 mt-6">

      <p class="text-sm text-gray-500">Financial Bid Open Date</p>
      <p class="text-base font-medium mt-1">
        <%= tender.finBidOpenAt ? new Date(tender.finBidOpenAt).toDateString() : "N/A" %>
      </p>

    </div>

  </section>

  <!-- DOCUMENTS -->
  <section class="mb-12">

    <h2 class="text-xl font-semibold mb-6">Files / Documents</h2>

    <% if (tender.docs && tender.docs.length > 0) { %>

      <% tender.docs.forEach(doc => { %>
        <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-800 border rounded-lg mb-3">

          <div class="flex items-center gap-3">
            <div class="bg-indigo-100 p-3 rounded">
              <span class="material-icons-outlined text-indigo-600">description</span>
            </div>
            <div>
              <p class="font-medium"><%= doc.originalName %></p>
              <p class="text-sm text-gray-500"><%= doc.size ? (doc.size/1024).toFixed(1) : '' %> KB</p>
            </div>
          </div>

          <a href="/tenders/doc/<%= doc.fileId %>" 
             class="px-4 py-2 text-sm font-medium text-indigo-600 bg-white border rounded-lg hover:bg-indigo-50">
            Download
          </a>

        </div>
      <% }) %>

    <% } else { %>

      <p class="text-gray-500">No documents available.</p>

    <% } %>

  </section>

  <!-- BUTTONS -->
  <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 mt-8">

    <button class="px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 shadow-sm">
      Participate in Tender
    </button>

    <button class="px-6 py-3 bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-gray-100 font-medium rounded-lg border hover:bg-gray-200 dark:hover:bg-gray-600 shadow-sm">
      Contact Department
    </button>

  </div>

</div>