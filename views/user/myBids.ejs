                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-3 pt-4">
                    ${userRole !== 'admin' ? `
                    <a href="${bid.type === 'property' ? '/properties/' + bid.referenceId : '/tenders/' + bid.referenceId}" 
                       class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-center">
                        View ${bid.type === 'property' ? 'Property' : 'Tender'} Details
