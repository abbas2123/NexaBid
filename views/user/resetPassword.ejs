<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title><%= title || "Set New Password - NexaBid" %></title>

<!-- Tailwind -->
<script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"/>

<script>
tailwind.config = {
  darkMode: "class",
  theme: {
    extend: {
      colors: {
        primary: "#1D4ED8",
        "background-light": "#FFFFFF",
        "background-dark": "#111827",
      },
      fontFamily: { display: ["Inter", "sans-serif"] },
    },
  },
};
</script>

<style>
  body { font-family: "Inter", sans-serif; }
</style>

</head>
<body class="bg-background-light dark:bg-background-dark font-display">
<div class="flex flex-col min-h-screen">

  <!-- HEADER -->
  <header class="bg-background-light dark:bg-background-dark border-b border-gray-200 dark:border-gray-700">
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">

      <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white">NexaBid</a>

      <!-- Hamburger -->
      <button id="menuToggle" class="md:hidden text-2xl text-gray-700 dark:text-gray-300">
        â˜°
      </button>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="/" class="text-gray-600 dark:text-gray-300 hover:text-primary">Home</a>
        <a href="/about" class="text-gray-600 dark:text-gray-300 hover:text-primary">About</a>
        <a href="/contact" class="text-gray-600 dark:text-gray-300 hover:text-primary">Contact</a>
        <a href="/auth/login"
           class="ml-4 px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-md text-sm hover:bg-gray-200 dark:hover:bg-gray-700">
          Log In
        </a>
      </div>

    </nav>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden md:hidden text-center px-4 py-4 space-y-3 bg-gray-100 dark:bg-gray-800">
      <a href="/" class="block text-gray-600 dark:text-gray-300 hover:text-primary">Home</a>
      <a href="/about" class="block text-gray-600 dark:text-gray-300 hover:text-primary">About</a>
      <a href="/contact" class="block text-gray-600 dark:text-gray-300 hover:text-primary">Contact</a>

      <a href="/auth/login"
         class="block py-2 bg-primary text-white rounded-lg hover:bg-blue-700">
        Log In
      </a>
    </div>

  </header>

  <!-- MAIN SECTION -->
  <main class="flex-grow flex items-center justify-center py-10 px-6">
    <div class="w-full max-w-md text-center">

      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
        Set new password
      </h1>

      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
        Your new password must be different from previously used passwords.
      </p>

      <!-- FORM -->
      <form id="resetForm" class="mt-8 space-y-6 text-left">

        <div class="space-y-4">

          <!-- New Password -->
          <div>
            <label for="newPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              New password
            </label>
            <input
              id="newPassword"
              type="password"
              placeholder="New password"
              class="w-full px-3 py-3 border border-gray-300 dark:border-gray-700 rounded-md
                     bg-background-light dark:bg-gray-800 text-gray-900 dark:text-white
                     placeholder-gray-400 dark:placeholder-gray-500 shadow-sm focus:ring-primary"
            />
          </div>

          <!-- Confirm Password -->
          <div>
            <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
              Confirm password
            </label>
            <input
              id="confirmPassword"
              type="password"
              placeholder="Confirm password"
              class="w-full px-3 py-3 border border-gray-300 dark:border-gray-700 rounded-md
                     bg-background-light dark:bg-gray-800 text-gray-900 dark:text-white
                     placeholder-gray-400 dark:placeholder-gray-500 shadow-sm focus:ring-primary"
            />
          </div>

        </div>

        <button
          type="submit"
          class="w-full py-3 bg-primary text-white font-medium rounded-md hover:bg-blue-700 transition">
          Reset Password
        </button>

      </form>

    </div>
  </main>

</div>

<!-- SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
   
  // Mobile Menu Toggle
  document.getElementById("menuToggle").addEventListener("click", () => {
    document.getElementById("mobileMenu").classList.toggle("hidden");
  });
 // Read userId from URL query
const urlParams = new URLSearchParams(window.location.search);
const userId = urlParams.get("userId");
  // Reset Password Submit Handler
  document.getElementById("resetForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const password = document.getElementById("newPassword").value.trim();
    const confirmPass = document.getElementById("confirmPassword").value.trim();

    if (!password || !confirmPass) {
      return Swal.fire("Error", "All fields are required", "error");
    }

    if (password !== confirmPass) {
      return Swal.fire("Mismatch", "Passwords do not match", "error");
    }

    // Send Request
    const res = await fetch("/auth/reset-password", {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({ userId, password })
});

    const data = await res.json();

    if (!data.success) {
      return Swal.fire("Error", data.message, "error");
    }

    Swal.fire("Success", "Password reset successfully", "success");

    setTimeout(() => {
      window.location.replace("/auth/login");
    }, 1200);
  });
</script>

</body>
</html>