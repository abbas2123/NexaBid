                    ` : ''}
                    <button onclick="closeBidModal()" 
                            class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition ${userRole === 'admin' ? 'w-full' : ''}">
                        Close
